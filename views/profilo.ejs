<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profilo di <%= user.nome %> <%= user.cognome %></title>
    <link href="/stylesheet/Navbar.css" rel="stylesheet" type="text/css">
    <link href="/stylesheet/Footer.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.4/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="/javascript/Main.js" type="module" defer></script>
</head>
<body>
    <%- include('partials/navbar') %>
    <div class="profile-card">
        <div class="profile-avatar mb-3">
            <i class="bi bi-person-circle"></i>
        </div>
        <h2 class="text-center mb-1"><%= user.nome %> <%= user.cognome %></h2>
        <p class="text-center text-muted mb-4"><i class="bi bi-envelope"></i> <%= user.email %></p>
        <dl class="row profile-details">
            <dt class="col-5"><i class="bi bi-telephone"></i> Telefono</dt>
            <dd class="col-7"><%= user.telefono ? user.telefono : 'Non specificato' %></dd>

            <dt class="col-5"><i class="bi bi-person-badge"></i> Tipo utente</dt>
            <dd class="col-7"><%= user.tipo_utente_nome ? user.tipo_utente_nome : 'Non specificato' %></dd>

            <dt class="col-5"><i class="bi bi-calendar-check"></i> Registrato il</dt>
            <dd class="col-7"><%= user.data_registrazione ? user.data_registrazione.substring(0,10) : 'N/D' %></dd>
        </dl>
        <div class="text-center mt-4">
            <a href="/Logout" class="btn btn-outline-danger"><i class="bi bi-box-arrow-right"></i> Esci</a>
        </div>
    </div>
    <%- include('partials/footer.ejs') %>
    <script src="/js/profile.js"></script>
</body>
</html>