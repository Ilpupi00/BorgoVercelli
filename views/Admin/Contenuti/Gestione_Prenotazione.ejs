<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestione Prenotazioni - <%= user.nome %> <%= user.cognome %></title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.4/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
    <script src="/javascripts/components/Admin.js" defer></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.4/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/stylesheets/Admin.css">
</head>
<body>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <%- include('../../partials/sidebar.ejs'); %>

            <!-- Contenuto principale -->
            <div class="col-lg-9 col-xl-10 px-4 py-5">
                <div class="row justify-content-center">
                    <div class="col-12">

                        <!-- Header con profilo -->
                        <div class="admin-header animate__animated animate__fadeInDown mb-4">
                            <div class="row align-items-center">
                                <div class="col-md-8 text-center text-md-start">
                                    <h1 class="display-5 fw-bold text-dark mb-2">
                                        <i class="bi bi-calendar-check-fill text-primary me-2"></i>
                                        Gestione Prenotazioni
                                    </h1>
                                    <p class="text-primary fw-semibold mb-0">Amministratore del Sistema</p>
                                </div>
                                <div class="col-md-4 text-center text-md-end mt-3 mt-md-0">
                                    <a href="/admin" class="btn btn-outline-secondary btn-modern me-2">
                                        <i class="bi bi-arrow-left"></i> Torna al Pannello
                                    </a>
                                    <a href="/Logout" class="btn btn-outline-danger btn-modern">
                                        <i class="bi bi-box-arrow-right"></i> Esci
                                    </a>
                                </div>
                            </div>
                        </div>

                        <!-- Contenuto principale -->
                        <div class="admin-content animate__animated animate__fadeInUp animate__delay-1s">
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <h2 class="mb-0">
                                    <i class="bi bi-list-ul text-primary me-2"></i>
                                    Tutte le Prenotazioni
                                </h2>
                                <div class="d-flex gap-2">
                                    <button class="btn btn-success btn-modern" onclick="mostraPrenotazioniConfermate()">
                                        <i class="bi bi-check-circle me-2"></i>
                                        Confermate
                                    </button>
                                    <button class="btn btn-warning btn-modern" onclick="mostraPrenotazioniInAttesa()">
                                        <i class="bi bi-clock me-2"></i>
                                        In Attesa
                                    </button>
                                    <button class="btn btn-danger btn-modern" onclick="mostraPrenotazioniAnnullate()">
                                        <i class="bi bi-x-circle me-2"></i>
                                        Annullate
                                    </button>
                                </div>
                            </div>

                            <div class="card">
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-hover">
                                            <thead class="table-dark">
                                                <tr>
                                                    <th>ID</th>
                                                    <th>Campo</th>
                                                    <th>Utente</th>
                                                    <th>Squadra</th>
                                                    <th>Data</th>
                                                    <th>Orario</th>
                                                    <th>Tipo Attività</th>
                                                    <th>Stato</th>
                                                    <th>Azioni</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% if (prenotazioni && prenotazioni.length > 0) { %>
                                                    <% prenotazioni.forEach(prenotazione => { %>
                                                        <tr>
                                                            <td><%= prenotazione.id %></td>
                                                            <td><%= prenotazione.campo_nome || 'Campo ' + prenotazione.campo_id %></td>
                                                            <td>
                                                                <% if (prenotazione.utente_nome) { %>
                                                                    <%= prenotazione.utente_nome %> <%= prenotazione.utente_cognome %>
                                                                <% } else { %>
                                                                    -
                                                                <% } %>
                                                            </td>
                                                            <td><%= prenotazione.squadra_nome || '-' %></td>
                                                            <td><%= prenotazione.data_prenotazione ? new Date(prenotazione.data_prenotazione).toLocaleDateString('it-IT') : '-' %></td>
                                                            <td><%= prenotazione.ora_inizio %> - <%= prenotazione.ora_fine %></td>
                                                            <td><%= prenotazione.tipo_attivita || '-' %></td>
                                                            <td>
                                                                <% if (prenotazione.stato === 'confermata') { %>
                                                                    <span class="badge bg-success">Confermata</span>
                                                                <% } else if (prenotazione.stato === 'in_attesa') { %>
                                                                    <span class="badge bg-warning">In Attesa</span>
                                                                <% } else if (prenotazione.stato === 'annullata') { %>
                                                                    <span class="badge bg-danger">Annullata</span>
                                                                <% } else { %>
                                                                    <span class="badge bg-secondary"><%= prenotazione.stato %></span>
                                                                <% } %>
                                                            </td>
                                                            <td>
                                                                <div class="btn-group" role="group">
                                                                    <button class="btn btn-sm btn-outline-primary" title="Visualizza" onclick="visualizzaPrenotazione('<%= prenotazione.id %>')">
                                                                        <i class="bi bi-eye"></i>
                                                                    </button>
                                                                    <% if (prenotazione.stato === 'in_attesa') { %>
                                                                        <button class="btn btn-sm btn-outline-success" title="Conferma" onclick="confermaPrenotazione('<%= prenotazione.id %>')">
                                                                            <i class="bi bi-check"></i>
                                                                        </button>
                                                                        <button class="btn btn-sm btn-outline-danger" title="Annulla" onclick="annullaPrenotazione('<%= prenotazione.id %>')">
                                                                            <i class="bi bi-x"></i>
                                                                        </button>
                                                                    <% } else if (prenotazione.stato === 'confermata') { %>
                                                                        <button class="btn btn-sm btn-outline-warning" title="Modifica" onclick="modificaPrenotazione('<%= prenotazione.id %>')">
                                                                            <i class="bi bi-pencil"></i>
                                                                        </button>
                                                                    <% } %>
                                                                    <button class="btn btn-sm btn-outline-danger" title="Elimina" onclick="eliminaPrenotazione('<%= prenotazione.id %>')">
                                                                        <i class="bi bi-trash"></i>
                                                                    </button>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                    <% }); %>
                                                <% } else { %>
                                                    <tr>
                                                        <td colspan="9" class="text-center text-muted py-4">
                                                            <i class="bi bi-info-circle display-4 mb-3"></i>
                                                            <p>Nessuna prenotazione presente nel sistema.</p>
                                                        </td>
                                                    </tr>
                                                <% } %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="page"></div>

    <script>
        function visualizzaPrenotazione(id) {
            // Implementare visualizzazione dettagliata prenotazione
            alert('Funzionalità di visualizzazione prenotazione da implementare');
        }

        function confermaPrenotazione(id) {
            // Implementare conferma prenotazione
            alert('Funzionalità di conferma prenotazione da implementare');
        }

        function annullaPrenotazione(id) {
            // Implementare annullamento prenotazione
            alert('Funzionalità di annullamento prenotazione da implementare');
        }

        function modificaPrenotazione(id) {
            // Implementare modifica prenotazione
            alert('Funzionalità di modifica prenotazione da implementare');
        }

        function eliminaPrenotazione(id) {
            if (confirm('Sei sicuro di voler eliminare questa prenotazione?')) {
                // Implementare eliminazione
                alert('Funzionalità di eliminazione da implementare');
            }
        }

        function mostraPrenotazioniConfermate() {
            // Filtrare per prenotazioni confermate
            alert('Filtro prenotazioni confermate da implementare');
        }

        function mostraPrenotazioniInAttesa() {
            // Filtrare per prenotazioni in attesa
            alert('Filtro prenotazioni in attesa da implementare');
        }

        function mostraPrenotazioniAnnullate() {
            // Filtrare per prenotazioni annullate
            alert('Filtro prenotazioni annullate da implementare');
        }
    </script>
</body>
</html>
