<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestione Squadre - <%= user.nome %> <%= user.cognome %></title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.4/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
    <script src="/javascripts/Main.js" type="module" defer></script>
    <script src="/javascripts/components/Admin.js" defer></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.4/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/stylesheets/Admin.css">
</head>
<body>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <%- include('../../partials/sidebar.ejs'); %>

            <!-- Contenuto principale -->
            <div class="col-lg-9 col-xl-10 px-4 py-5">
                <div class="row justify-content-center">
                    <div class="col-12">

                        <!-- Header con profilo -->
                        <div class="admin-header animate__animated animate__fadeInDown mb-4">
                            <div class="row align-items-center">
                                <div class="col-md-8 text-center text-md-start">
                                    <h1 class="display-5 fw-bold text-dark mb-2">
                                        <i class="bi bi-people-fill text-primary me-2"></i>
                                        Gestione Squadre
                                    </h1>
                                    <p class="text-primary fw-semibold mb-0">Amministratore del Sistema</p>
                                </div>
                                <div class="col-md-4 text-center text-md-end mt-3 mt-md-0">
                                    <a href="/admin" class="btn btn-outline-secondary btn-modern me-2">
                                        <i class="bi bi-arrow-left"></i> Torna al Pannello
                                    </a>
                                    <a href="/Logout" class="btn btn-outline-danger btn-modern">
                                        <i class="bi bi-box-arrow-right"></i> Esci
                                    </a>
                                </div>
                            </div>
                        </div>

                        <!-- Contenuto principale -->
                        <div class="admin-content animate__animated animate__fadeInUp animate__delay-1s">
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <h2 class="mb-0">
                                    <i class="bi bi-list-ul text-primary me-2"></i>
                                    Tutte le Squadre
                                </h2>
                                <button class="btn btn-primary btn-modern" onclick="creaSquadra()">
                                    <i class="bi bi-plus-circle me-2"></i>
                                    Crea Nuova Squadra
                                </button>
                            </div>

                            <div class="card">
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-hover">
                                            <thead class="table-dark">
                                                <tr>
                                                    <th>ID</th>
                                                    <th>Nome Squadra</th>
                                                    <th>Anno Fondazione</th>
                                                    <th>Dirigenti</th>
                                                    <th>Giocatori</th>
                                                    <th>Azioni</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% if (squadre && squadre.length > 0) { %>
                                                    <% squadre.forEach(squadra => { %>
                                                        <tr>
                                                            <td><%= squadra.id %></td>
                                                            <td>
                                                                <strong><%= squadra.nome %></strong>
                                                            </td>
                                                            <td><%= squadra.Anno %></td>
                                                            <td>
                                                                <% if (squadra.dirigenti && squadra.dirigenti.length > 0) { %>
                                                                    <ul class="list-unstyled mb-0">
                                                                        <% squadra.dirigenti.forEach(dirigente => { %>
                                                                            <li><small><%= dirigente.nome %> <%= dirigente.cognome %></small></li>
                                                                        <% }); %>
                                                                    </ul>
                                                                <% } else { %>
                                                                    <span class="text-muted">Nessun dirigente</span>
                                                                <% } %>
                                                            </td>
                                                            <td>
                                                                <!-- Placeholder per numero giocatori - da implementare -->
                                                                <span class="badge bg-info">Da implementare</span>
                                                            </td>
                                                            <td>
                                                                <div class="btn-group" role="group">
                                                                    <button class="btn btn-sm btn-outline-primary" title="Visualizza" onclick="visualizzaSquadra('<%= squadra.id %>')">
                                                                        <i class="bi bi-eye"></i>
                                                                    </button>
                                                                    <button class="btn btn-sm btn-outline-warning" title="Modifica" onclick="modificaSquadra('<%= squadra.id %>')">
                                                                        <i class="bi bi-pencil"></i>
                                                                    </button>
                                                                    <button class="btn btn-sm btn-outline-danger" title="Elimina" onclick="eliminaSquadra('<%= squadra.id %>')">
                                                                        <i class="bi bi-trash"></i>
                                                                    </button>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                    <% }); %>
                                                <% } else { %>
                                                    <tr>
                                                        <td colspan="6" class="text-center text-muted py-4">
                                                            <i class="bi bi-info-circle display-4 mb-3"></i>
                                                            <p>Nessuna squadra presente nel sistema.</p>
                                                            <button class="btn btn-primary" onclick="creaSquadra()">Crea la prima squadra</button>
                                                        </td>
                                                    </tr>
                                                <% } %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="page"></div>

    <script>
        function visualizzaSquadra(id) {
            // Implementare visualizzazione dettagliata squadra
            alert('Funzionalità di visualizzazione squadra da implementare');
        }

        function modificaSquadra(id) {
            // Implementare modifica squadra
            alert('Funzionalità di modifica squadra da implementare');
        }

        function eliminaSquadra(id) {
            if (confirm('Sei sicuro di voler eliminare questa squadra?')) {
                // Implementare eliminazione
                alert('Funzionalità di eliminazione da implementare');
            }
        }

        function creaSquadra() {
            // Implementare creazione nuova squadra
            alert('Funzionalità di creazione squadra da implementare');
        }
    </script>
</body>
</html>
