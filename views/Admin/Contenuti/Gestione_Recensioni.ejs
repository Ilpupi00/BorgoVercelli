<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestione Recensioni - <%= user.nome %> <%= user.cognome %></title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.4/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
    <script src="/javascripts/Main.js" type="module" defer></script>
    <script src="/javascripts/components/Admin.js" defer></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.4/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/stylesheets/Admin.css">
</head>
<body>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <%- include('../../partials/sidebar.ejs'); %>

            <!-- Contenuto principale -->
            <div class="col-lg-9 col-xl-10 px-4 py-5">
                <div class="row justify-content-center">
                    <div class="col-12">

                        <!-- Header con profilo -->
                        <div class="admin-header animate__animated animate__fadeInDown mb-4">
                            <div class="row align-items-center">
                                <div class="col-md-8 text-center text-md-start">
                                    <h1 class="display-5 fw-bold text-dark mb-2">
                                        <i class="bi bi-star-fill text-primary me-2"></i>
                                        Gestione Recensioni
                                    </h1>
                                    <p class="text-primary fw-semibold mb-0">Amministratore del Sistema</p>
                                </div>
                                <div class="col-md-4 text-center text-md-end mt-3 mt-md-0">
                                    <a href="/admin" class="btn btn-outline-secondary btn-modern me-2">
                                        <i class="bi bi-arrow-left"></i> Torna al Pannello
                                    </a>
                                    <a href="/Logout" class="btn btn-outline-danger btn-modern">
                                        <i class="bi bi-box-arrow-right"></i> Esci
                                    </a>
                                </div>
                            </div>
                        </div>

                        <!-- Contenuto principale -->
                        <div class="admin-content animate__animated animate__fadeInUp animate__delay-1s">
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <h2 class="mb-0">
                                    <i class="bi bi-list-ul text-primary me-2"></i>
                                    Tutte le Recensioni
                                </h2>
                                <div class="d-flex gap-2">
                                    <button class="btn btn-success btn-modern" onclick="mostraRecensioniVisibili()">
                                        <i class="bi bi-eye me-2"></i>
                                        Visibili
                                    </button>
                                    <button class="btn btn-warning btn-modern" onclick="mostraRecensioniNascoste()">
                                        <i class="bi bi-eye-slash me-2"></i>
                                        Nascoste
                                    </button>
                                </div>
                            </div>

                            <div class="card">
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-hover">
                                            <thead class="table-dark">
                                                <tr>
                                                    <th>ID</th>
                                                    <th>Utente</th>
                                                    <th>Valutazione</th>
                                                    <th>Titolo</th>
                                                    <th>Contenuto</th>
                                                    <th>Data</th>
                                                    <th>Stato</th>
                                                    <th>Azioni</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <% if (recensioni && recensioni.length > 0) { %>
                                                    <% recensioni.forEach(recensione => { %>
                                                        <tr>
                                                            <td><%= recensione.id %></td>
                                                            <td>
                                                                <% if (recensione.utente_nome) { %>
                                                                    <%= recensione.utente_nome %> <%= recensione.utente_cognome %>
                                                                <% } else { %>
                                                                    Utente <%= recensione.utente_id %>
                                                                <% } %>
                                                            </td>
                                                            <td>
                                                                <div class="d-flex align-items-center">
                                                                    <% for (let i = 1; i <= 5; i++) { %>
                                                                        <% if (i <= recensione.valutazione) { %>
                                                                            <i class="bi bi-star-fill text-warning"></i>
                                                                        <% } else { %>
                                                                            <i class="bi bi-star text-muted"></i>
                                                                        <% } %>
                                                                    <% } %>
                                                                    <span class="ms-2"><%= recensione.valutazione %>/5</span>
                                                                </div>
                                                            </td>
                                                            <td>
                                                                <strong><%= recensione.titolo %></strong>
                                                            </td>
                                                            <td>
                                                                <span title="<%= recensione.contenuto %>">
                                                                    <%= recensione.contenuto.length > 50 ? recensione.contenuto.substring(0, 50) + '...' : recensione.contenuto %>
                                                                </span>
                                                            </td>
                                                            <td><%= recensione.data_recensione ? new Date(recensione.data_recensione).toLocaleDateString('it-IT') : '-' %></td>
                                                            <td>
                                                                <% if (recensione.visibile) { %>
                                                                    <span class="badge bg-success">Visibile</span>
                                                                <% } else { %>
                                                                    <span class="badge bg-secondary">Nascosta</span>
                                                                <% } %>
                                                            </td>
                                                            <td>
                                                                <div class="btn-group" role="group">
                                                                    <button class="btn btn-sm btn-outline-primary" title="Visualizza" onclick="visualizzaRecensione('<%= recensione.id %>')">
                                                                        <i class="bi bi-eye"></i>
                                                                    </button>
                                                                    <% if (recensione.visibile) { %>
                                                                        <button class="btn btn-sm btn-outline-warning" title="Nascondi" onclick="nascondiRecensione('<%= recensione.id %>')">
                                                                            <i class="bi bi-eye-slash"></i>
                                                                        </button>
                                                                    <% } else { %>
                                                                        <button class="btn btn-sm btn-outline-success" title="Mostra" onclick="mostraRecensione('<%= recensione.id %>')">
                                                                            <i class="bi bi-eye"></i>
                                                                        </button>
                                                                    <% } %>
                                                                    <button class="btn btn-sm btn-outline-danger" title="Elimina" onclick="eliminaRecensione('<%= recensione.id %>')">
                                                                        <i class="bi bi-trash"></i>
                                                                    </button>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                    <% }); %>
                                                <% } else { %>
                                                    <tr>
                                                        <td colspan="8" class="text-center text-muted py-4">
                                                            <i class="bi bi-info-circle display-4 mb-3"></i>
                                                            <p>Nessuna recensione presente nel sistema.</p>
                                                        </td>
                                                    </tr>
                                                <% } %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="page"></div>

    <script>
        function visualizzaRecensione(id) {
            // Implementare visualizzazione dettagliata recensione
            alert('Funzionalità di visualizzazione recensione da implementare');
        }

        function nascondiRecensione(id) {
            // Implementare nascondere recensione
            alert('Funzionalità di nascondere recensione da implementare');
        }

        function mostraRecensione(id) {
            // Implementare mostrare recensione
            alert('Funzionalità di mostrare recensione da implementare');
        }

        function eliminaRecensione(id) {
            if (confirm('Sei sicuro di voler eliminare questa recensione?')) {
                // Implementare eliminazione
                alert('Funzionalità di eliminazione da implementare');
            }
        }

        function mostraRecensioniVisibili() {
            // Filtrare per recensioni visibili
            alert('Filtro recensioni visibili da implementare');
        }

        function mostraRecensioniNascoste() {
            // Filtrare per recensioni nascoste
            alert('Filtro recensioni nascoste da implementare');
        }
    </script>
</body>
</html>
