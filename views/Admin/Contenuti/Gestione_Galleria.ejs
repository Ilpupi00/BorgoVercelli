<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestione Galleria - <%= user.nome %> <%= user.cognome %></title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.4/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
    <script src="/javascripts/Main.js" type="module" defer></script>
    <script src="/javascripts/components/Admin.js" defer></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.4/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/stylesheets/Admin.css">
</head>
<body>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <%- include('../../partials/sidebar.ejs'); %>

            <!-- Contenuto principale -->
            <div class="col-lg-9 col-xl-10 px-4 py-5">
                <div class="row justify-content-center">
                    <div class="col-12">

                        <!-- Header con profilo -->
                        <div class="admin-header animate__animated animate__fadeInDown mb-4">
                            <div class="row align-items-center">
                                <div class="col-md-8 text-center text-md-start">
                                    <h1 class="display-5 fw-bold text-dark mb-2">
                                        <i class="bi bi-images text-primary me-2"></i>
                                        Gestione Galleria
                                    </h1>
                                    <p class="text-primary fw-semibold mb-0">Amministratore del Sistema</p>
                                </div>
                                <div class="col-md-4 text-center text-md-end mt-3 mt-md-0">
                                    <a href="/admin" class="btn btn-outline-secondary btn-modern me-2">
                                        <i class="bi bi-arrow-left"></i> Torna al Pannello
                                    </a>
                                    <a href="/upload-galleria" class="btn btn-primary btn-modern">
                                        <i class="bi bi-plus-circle me-2"></i>
                                        Carica Immagine
                                    </a>
                                </div>
                            </div>
                        </div>

                        <!-- Contenuto principale -->
                        <div class="admin-content animate__animated animate__fadeInUp animate__delay-1s">
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <h2 class="mb-0">
                                    <i class="bi bi-grid text-primary me-2"></i>
                                    Tutte le Immagini
                                </h2>
                            </div>

                            <div class="row">
                                <% if (immagini && immagini.length > 0) { %>
                                    <% immagini.forEach(immagine => { %>
                                        <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                                            <div class="card h-100">
                                                <div class="card-img-container">
                                                    <img src="<%= immagine.url %>" class="card-img-top" alt="<%= immagine.descrizione || 'Immagine galleria' %>" style="height: 200px; object-fit: cover;">
                                                </div>
                                                <div class="card-body d-flex flex-column">
                                                    <h6 class="card-title">
                                                        <%= immagine.descrizione || 'Senza descrizione' %>
                                                    </h6>
                                                    <p class="card-text text-muted small">
                                                        Caricato: <%= immagine.created_at ? new Date(immagine.created_at).toLocaleDateString('it-IT') : 'N/A' %>
                                                    </p>
                                                    <div class="mt-auto">
                                                        <div class="btn-group w-100" role="group">
                                                            <button class="btn btn-sm btn-outline-primary" onclick="visualizzaImmagine('<%= immagine.url %>')">
                                                                <i class="bi bi-eye"></i>
                                                            </button>
                                                            <button class="btn btn-sm btn-outline-warning" onclick="modificaImmagine('<%= immagine.id %>')">
                                                                <i class="bi bi-pencil"></i>
                                                            </button>
                                                            <button class="btn btn-sm btn-outline-danger" onclick="eliminaImmagine('<%= immagine.id %>')">
                                                                <i class="bi bi-trash"></i>
                                                            </button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    <% }); %>
                                <% } else { %>
                                    <div class="col-12 text-center py-5">
                                        <i class="bi bi-images display-4 text-muted mb-3"></i>
                                        <h4 class="text-muted">Nessuna immagine presente</h4>
                                        <p class="text-muted">Carica la tua prima immagine per iniziare la galleria.</p>
                                        <a href="/upload-galleria" class="btn btn-primary">Carica Immagine</a>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal per visualizzare immagine -->
    <div class="modal fade" id="imageModal" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Visualizza Immagine</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body text-center">
                    <img id="modalImage" src="" alt="Immagine" class="img-fluid">
                </div>
            </div>
        </div>
    </div>

    <div id="page"></div>

    <script>
        function visualizzaImmagine(url) {
            document.getElementById('modalImage').src = url;
            new bootstrap.Modal(document.getElementById('imageModal')).show();
        }

        function modificaImmagine(id) {
            // Per ora, placeholder
            alert('Funzionalità di modifica da implementare per ID: ' + id);
        }

        function eliminaImmagine(id) {
            if (confirm('Sei sicuro di voler eliminare questa immagine?')) {
                // Implementare eliminazione
                alert('Funzionalità di eliminazione da implementare per ID: ' + id);
            }
        }
    </script>
</body>
</html>
