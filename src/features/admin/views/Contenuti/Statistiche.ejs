<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Statistiche - Admin</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.4/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/assets/styles/Admin.css">
    <link rel="stylesheet" href="/assets/styles/Admin_Global.css">
    <link rel="stylesheet" href="/assets/styles/Statistiche.css">

</head>
<body>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <%- include('partials/sidebar.ejs'); %>

            <!-- Contenuto principale -->
            <main class="col-lg-9 col-xl-10 px-4 py-5">
                <div class="admin-container">
                    <header class="admin-page-header slide-up">
                        <div class="admin-page-header-content">
                            <h1><i class="bi bi-bar-chart-fill"></i> Statistiche del Sistema</h1>
                            <p class="admin-page-subtitle">Dashboard analisi e metriche di performance</p>
                        </div>
                        <div class="admin-page-header-actions">
                            <a href="/admin" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i><span class="d-none d-sm-inline">Pannello</span>
                            </a>
                            <a href="/Logout" class="btn btn-outline-danger">
                                <i class="bi bi-box-arrow-right me-2"></i><span class="d-none d-sm-inline">Esci</span>
                            </a>
                        </div>
                    </header>

                    <!-- Cards statistiche -->
                    <section class="stats-cards-section fade-in">
                        <div class="row g-4">
                            <div class="col-md-6 col-lg-3">
                                <div class="stats-card stats-card-primary">
                                    <div class="stats-card-icon">
                                        <i class="bi bi-people-fill"></i>
                                    </div>
                                    <div class="stats-card-content">
                                        <h3 class="stats-card-title">Utenti Totali</h3>
                                        <p class="stats-card-value">
                                            <% if (statistiche && statistiche.utentiTotali !== undefined) { %>
                                                <%= statistiche.utentiTotali %>
                                            <% } else { %>
                                                <span class="text-muted">N/D</span>
                                            <% } %>
                                        </p>
                                        <p>
                                            <% const vu = (typeof variazioni !== 'undefined' && variazioni && variazioni.utenti) ? variazioni.utenti : null; %>
                                            <% if (vu) { %>
                                                <% if (vu.pct !== null) { %>
                                                    <span class="badge <%= vu.direction === 'up' ? 'badge-success' : (vu.direction === 'down' ? 'badge-warning' : 'badge-secondary') %>"> <%= vu.pct %>% </span>
                                                <% } else { %>
                                                    <span class="badge <%= vu.direction === 'up' ? 'badge-success' : (vu.direction === 'down' ? 'badge-warning' : 'badge-secondary') %>"> <%= (vu.delta >= 0 ? '+' : '') + vu.delta %> </span>
                                                <% } %>
                                            <% } else { %>
                                                <span class="text-muted">N/D</span>
                                            <% } %>
                                        </p>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6 col-lg-3">
                                <div class="stats-card stats-card-success">
                                    <div class="stats-card-icon">
                                        <i class="bi bi-newspaper"></i>
                                    </div>
                                    <div class="stats-card-content">
                                        <h3 class="stats-card-title">Notizie Pubblicate</h3>
                                        <p class="stats-card-value">
                                            <% if (statistiche && statistiche.notiziePubblicate !== undefined) { %>
                                                <%= statistiche.notiziePubblicate %>
                                            <% } else { %>
                                                <span class="text-muted">N/D</span>
                                            <% } %>
                                        </p>
                                        <p>
                                            <% const vn = (typeof variazioni !== 'undefined' && variazioni && variazioni.notizie) ? variazioni.notizie : null; %>
                                            <% if (vn) { %>
                                                <% if (vn.pct !== null) { %>
                                                    <span class="badge <%= vn.direction === 'up' ? 'badge-success' : (vn.direction === 'down' ? 'badge-warning' : 'badge-secondary') %>"> <%= vn.pct %>% </span>
                                                <% } else { %>
                                                    <span class="badge <%= vn.direction === 'up' ? 'badge-success' : (vn.direction === 'down' ? 'badge-warning' : 'badge-secondary') %>"> <%= (vn.delta >= 0 ? '+' : '') + vn.delta %> </span>
                                                <% } %>
                                            <% } else { %>
                                                <span class="text-muted">N/D</span>
                                            <% } %>
                                        </p>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6 col-lg-3">
                                <div class="stats-card stats-card-warning">
                                    <div class="stats-card-icon">
                                        <i class="bi bi-calendar-event-fill"></i>
                                    </div>
                                    <div class="stats-card-content">
                                        <h3 class="stats-card-title">Eventi Attivi</h3>
                                        <p class="stats-card-value">
                                            <% if (statistiche && statistiche.eventiAttivi !== undefined) { %>
                                                <%= statistiche.eventiAttivi %>
                                            <% } else { %>
                                                <span class="text-muted">N/D</span>
                                            <% } %>
                                        </p>
                                        <p>
                                            <% const ve = (typeof variazioni !== 'undefined' && variazioni && variazioni.eventi) ? variazioni.eventi : null; %>
                                            <% if (ve) { %>
                                                <% if (ve.pct !== null) { %>
                                                    <span class="badge <%= ve.direction === 'up' ? 'badge-success' : (ve.direction === 'down' ? 'badge-warning' : 'badge-secondary') %>"> <%= ve.pct %>% </span>
                                                <% } else { %>
                                                    <span class="badge <%= ve.direction === 'up' ? 'badge-success' : (ve.direction === 'down' ? 'badge-warning' : 'badge-secondary') %>"> <%= (ve.delta >= 0 ? '+' : '') + ve.delta %> </span>
                                                <% } %>
                                            <% } else { %>
                                                <span class="text-muted">N/D</span>
                                            <% } %>
                                        </p>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6 col-lg-3">
                                <div class="stats-card stats-card-info">
                                    <div class="stats-card-icon">
                                        <i class="bi bi-calendar-check-fill"></i>
                                    </div>
                                    <div class="stats-card-content">
                                        <h3 class="stats-card-title">Prenotazioni Attive</h3>
                                        <p class="stats-card-value">
                                            <% if (statistiche && statistiche.prenotazioniAttive !== undefined) { %>
                                                <%= statistiche.prenotazioniAttive %>
                                            <% } else { %>
                                                <span class="text-muted">N/D</span>
                                            <% } %>
                                        </p>
                                        <p>
                                            <% const vp = (typeof variazioni !== 'undefined' && variazioni && variazioni.prenotazioni) ? variazioni.prenotazioni : null; %>
                                            <% if (vp) { %>
                                                <% if (vp.pct !== null) { %>
                                                    <span class="badge <%= vp.direction === 'up' ? 'badge-success' : (vp.direction === 'down' ? 'badge-warning' : 'badge-secondary') %>"> <%= vp.pct %>% </span>
                                                <% } else { %>
                                                    <span class="badge <%= vp.direction === 'up' ? 'badge-success' : (vp.direction === 'down' ? 'badge-warning' : 'badge-secondary') %>"> <%= (vp.delta >= 0 ? '+' : '') + vp.delta %> </span>
                                                <% } %>
                                            <% } else { %>
                                                <span class="text-muted">N/D</span>
                                            <% } %>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>

                    <!-- Sezione grafici -->
                    <section class="charts-section fade-in">
                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="content-card">
                                    <div class="chart-header">
                                        <h3 class="chart-title"><i class="bi bi-bar-chart me-2"></i>Attivit√† Recenti</h3>
                                    </div>
                                    <div class="chart-container">
                                        <canvas id="activityChart"></canvas>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="content-card">
                                    <div class="chart-header">
                                        <h3 class="chart-title"><i class="bi bi-pie-chart me-2"></i>Distribuzione Utenti</h3>
                                    </div>
                                    <div class="chart-container">
                                        <canvas id="userDistributionChart"></canvas>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row g-4 mt-2">
                            <div class="col-12">
                                <div class="content-card">
                                    <div class="chart-header">
                                        <h3 class="chart-title"><i class="bi bi-graph-up me-2"></i>Tendenze Mensili</h3>
                                    </div>
                                    <div class="chart-container chart-container-large">
                                        <canvas id="trendsChart"></canvas>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>

                    <!-- Tabella riepilogativa -->
                    <section class="content-card fade-in mt-4">
                        <div class="section-header">
                            <h2 class="section-title mb-0"><i class="bi bi-table me-2"></i>Riepilogo Dettagliato</h2>
                        </div>
                        <div class="table-responsive">
                            <table class="table admin-table">
                                <thead>
                                    <tr>
                                        <th>Metrica</th>
                                        <th>Valore</th>
                                        <th>Variazione</th>
                                        <th>Periodo</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>Utenti Registrati</td>
                                        <td>
                                            <% if (statistiche && statistiche.utentiTotali !== undefined) { %>
                                                <strong><%= statistiche.utentiTotali %></strong>
                                            <% } else { %>
                                                <span class="text-muted">N/D</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% const vu2 = (typeof variazioni !== 'undefined' && variazioni && variazioni.utenti) ? variazioni.utenti : null; %>
                                            <% if (vu2) { %>
                                                <% if (vu2.pct !== null) { %>
                                                    <span class="badge <%= vu2.direction === 'up' ? 'badge-success' : (vu2.direction === 'down' ? 'badge-warning' : 'badge-secondary') %>"><%= (vu2.pct>0?'+':'') + vu2.pct %>%</span>
                                                <% } else { %>
                                                    <span class="badge <%= vu2.direction === 'up' ? 'badge-success' : (vu2.direction === 'down' ? 'badge-warning' : 'badge-secondary') %>"><%= (vu2.delta>=0?'+':'') + vu2.delta %></span>
                                                <% } %>
                                            <% } else { %>
                                                <span class="text-muted">N/D</span>
                                            <% } %>
                                        </td>
                                        <td>Questo mese</td>
                                    </tr>
                                    <tr>
                                        <td>Notizie Pubblicate</td>
                                        <td>
                                            <% if (statistiche && statistiche.notiziePubblicate !== undefined) { %>
                                                <strong><%= statistiche.notiziePubblicate %></strong>
                                            <% } else { %>
                                                <span class="text-muted">N/D</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% const vn2 = (typeof variazioni !== 'undefined' && variazioni && variazioni.notizie) ? variazioni.notizie : null; %>
                                            <% if (vn2) { %>
                                                <% if (vn2.pct !== null) { %>
                                                    <span class="badge <%= vn2.direction === 'up' ? 'badge-success' : (vn2.direction === 'down' ? 'badge-warning' : 'badge-secondary') %>"><%= (vn2.pct>0?'+':'') + vn2.pct %>%</span>
                                                <% } else { %>
                                                    <span class="badge <%= vn2.direction === 'up' ? 'badge-success' : (vn2.direction === 'down' ? 'badge-warning' : 'badge-secondary') %>"><%= (vn2.delta>=0?'+':'') + vn2.delta %></span>
                                                <% } %>
                                            <% } else { %>
                                                <span class="text-muted">N/D</span>
                                            <% } %>
                                        </td>
                                        <td>Questo mese</td>
                                    </tr>
                                    <tr>
                                        <td>Eventi Organizzati</td>
                                        <td>
                                            <% if (statistiche && statistiche.eventiAttivi !== undefined) { %>
                                                <strong><%= statistiche.eventiAttivi %></strong>
                                            <% } else { %>
                                                <span class="text-muted">N/D</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% const ve2 = (typeof variazioni !== 'undefined' && variazioni && variazioni.eventi) ? variazioni.eventi : null; %>
                                            <% if (ve2) { %>
                                                <% if (ve2.pct !== null) { %>
                                                    <span class="badge <%= ve2.direction === 'up' ? 'badge-success' : (ve2.direction === 'down' ? 'badge-warning' : 'badge-secondary') %>"><%= (ve2.pct>0?'+':'') + ve2.pct %>%</span>
                                                <% } else { %>
                                                    <span class="badge <%= ve2.direction === 'up' ? 'badge-success' : (ve2.direction === 'down' ? 'badge-warning' : 'badge-secondary') %>"><%= (ve2.delta>=0?'+':'') + ve2.delta %></span>
                                                <% } %>
                                            <% } else { %>
                                                <span class="text-muted">N/D</span>
                                            <% } %>
                                        </td>
                                        <td>Questo mese</td>
                                    </tr>
                                    <tr>
                                        <td>Prenotazioni Campo</td>
                                        <td>
                                            <% if (statistiche && statistiche.prenotazioniAttive !== undefined) { %>
                                                <strong><%= statistiche.prenotazioniAttive %></strong>
                                            <% } else { %>
                                                <span class="text-muted">N/D</span>
                                            <% } %>
                                        </td>
                                        <td>
                                            <% const vp2 = (typeof variazioni !== 'undefined' && variazioni && variazioni.prenotazioni) ? variazioni.prenotazioni : null; %>
                                            <% if (vp2) { %>
                                                <% if (vp2.pct !== null) { %>
                                                    <span class="badge <%= vp2.direction === 'up' ? 'badge-success' : (vp2.direction === 'down' ? 'badge-warning' : 'badge-secondary') %>"><%= (vp2.pct>0?'+':'') + vp2.pct %>%</span>
                                                <% } else { %>
                                                    <span class="badge <%= vp2.direction === 'up' ? 'badge-success' : (vp2.direction === 'down' ? 'badge-warning' : 'badge-secondary') %>"><%= (vp2.delta>=0?'+':'') + vp2.delta %></span>
                                                <% } %>
                                            <% } else { %>
                                                <span class="text-muted">N/D</span>
                                            <% } %>
                                        </td>
                                        <td>Questa settimana</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </section>

                </div>
            </main>
        </div>
    </div>

    <script>
        // Passa i dati delle statistiche al JavaScript
        window.statisticheData = <%- JSON.stringify(statistiche) %>;
    </script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.4/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/assets/scripts/components/AdminGlobal.js"></script>
    <script src="/assets/scripts/components/Admin.js"></script>
    <script src="/assets/scripts/Statistiche.js"></script>
</body>
</html>
