<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crea Nuovo Campionato - Admin</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.4/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/assets/styles/Admin.css">
    <link rel="stylesheet" href="/assets/styles/Admin_Global.css">
    <link rel="stylesheet" href="/assets/styles/Crea_Campionato.css">
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <%- include('../../partials/sidebar.ejs'); %>
            <main class="col-lg-9 col-xl-10 px-4 py-5">
                <div class="admin-container">
                    <header class="admin-page-header slide-up">
                        <div class="admin-page-header-content">
                            <h1><i class="bi bi-plus-circle-fill"></i> Crea Nuovo Campionato</h1>
                            <p class="admin-page-subtitle">Inserisci le informazioni del nuovo campionato</p>
                        </div>
                        <div class="admin-page-header-actions">
                            <a href="/admin/campionati" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i>Indietro
                            </a>
                            <a href="/Logout" class="btn btn-outline-danger">
                                <i class="bi bi-box-arrow-right me-2"></i>Esci
                            </a>
                        </div>
                    </header>

                    <section class="content-card form-card fade-in">
                        <form id="createChampionshipForm">
                            <div class="form-section">
                                <h3 class="form-section-title">
                                    <i class="bi bi-info-circle me-2"></i>Informazioni Generali
                                </h3>
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <div class="form-floating">
                                            <input type="text" class="form-control" id="nome" name="nome" placeholder="Nome" required>
                                            <label for="nome"><i class="bi bi-trophy me-2"></i>Nome Campionato *</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <div class="form-floating">
                                            <input type="text" class="form-control" id="stagione" name="stagione" 
                                                   value="<%= new Date().getFullYear() %>-<%= new Date().getFullYear() + 1 %>" 
                                                   placeholder="Stagione" required>
                                            <label for="stagione"><i class="bi bi-calendar-event me-2"></i>Stagione *</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <div class="form-floating">
                                            <select class="form-select" id="categoria" name="categoria" required>
                                                <option value="">Seleziona categoria</option>
                                                <option value="Juniores">Juniores</option>
                                                <option value="Allievi">Allievi</option>
                                                <option value="Giovanissimi">Giovanissimi</option>
                                                <option value="Esordienti">Esordienti</option>
                                                <option value="Pulcini">Pulcini</option>
                                                <option value="Prima Squadra">Prima Squadra</option>
                                            </select>
                                            <label for="categoria"><i class="bi bi-tag me-2"></i>Categoria *</label>
                                        </div>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <div class="form-check form-switch mt-4 ms-3">
                                            <input class="form-check-input" type="checkbox" id="attivo" checked style="width: 3rem; height: 1.5rem;">
                                            <label class="form-check-label ms-2 fw-semibold" for="attivo">
                                                <i class="bi bi-toggle-on me-2"></i>Campionato attivo
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-section">
                                <h3 class="form-section-title">
                                    <i class="bi bi-people-fill me-2"></i>Squadre Partecipanti
                                </h3>
                                <div class="row mb-3">
                                    <div class="col-12">
                                        <div class="input-group">
                                            <select class="form-select" id="nomeSquadra">
                                                <option value="">Seleziona una squadra...</option>
                                                <% if (squadre && squadre.length > 0) { %>
                                                    <% squadre.forEach(squadra => { %>
                                                        <option value="<%= squadra.nome %>"><%= squadra.nome %></option>
                                                    <% }); %>
                                                <% } %>
                                            </select>
                                            <button type="button" class="btn btn-success" id="addSquadraBtn">
                                                <i class="bi bi-plus-circle me-1"></i> Aggiungi Squadra
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12">
                                        <div class="table-responsive">
                                            <table class="table admin-table">
                                                <thead>
                                                    <tr>
                                                        <th>#</th>
                                                        <th>Nome Squadra</th>
                                                        <th class="text-center">Azioni</th>
                                                    </tr>
                                                </thead>
                                                <tbody id="squadreTableBody">
                                                    <tr id="noSquadreRow">
                                                        <td colspan="3" class="text-center text-muted">
                                                            Nessuna squadra aggiunta
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="form-footer">
                                <div class="form-footer-info">
                                    <small class="text-muted">
                                        <i class="bi bi-info-circle me-1"></i>
                                        I campi contrassegnati con * sono obbligatori
                                    </small>
                                </div>
                                <div class="form-footer-actions">
                                    <a href="/admin/campionati" class="btn btn-secondary">
                                        <i class="bi bi-x-circle me-2"></i>Annulla
                                    </a>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="bi bi-check-circle me-2"></i>Crea Campionato
                                    </button>
                                </div>
                            </div>
                        </form>
                    </section>
                </div>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.4/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/assets/scripts/AdminGlobal.js"></script>
    <script src="/assets/scripts/CreaCampionato.js"></script>
</body>
</html>
