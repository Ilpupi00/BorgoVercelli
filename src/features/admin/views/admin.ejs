<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pannello Admin - <%= user.nome %> <%= user.cognome %></title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.4/dist/css/bootstrap.min.css" rel="stylesheet">
    <%- include('../../shared/views/partials/theme-includes') %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
    <link rel="stylesheet" href="/assets/styles/Admin.css">
    <link rel="stylesheet" href="/assets/styles/Admin_Global.css">
    <link rel="stylesheet" href="/assets/styles/Footer.css">
    <link rel="stylesheet" href="/assets/styles/theme-admin.css">
</head>
<body>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <%- include('partials/sidebar.ejs'); %>

            <!-- Contenuto principale -->
            <main class="col-lg-9 col-xl-10 px-4 py-5" role="main">
                <div class="row justify-content-center">
                    <div class="col-12">
                        
                        <!-- Header -->
                        <header class="admin-page-header slide-up">
                            <div class="admin-page-header-content">
                                <h1>
                                    <i class="bi bi-shield-check-fill"></i>
                                    Pannello Amministratore
                                </h1>
                                <p class="admin-page-subtitle">Amministratore del Sistema</p>
                            </div>
                            <div class="admin-page-header-actions">
                                <a href="/admin/profilo" class="btn btn-outline-primary d-flex align-items-center justify-content-center">
                                    <i class="bi bi-person-circle me-2"></i>
                                    <span class="d-none d-sm-inline">Profilo</span>
                                </a>
                                <!-- Theme & color controls -->
                                <div class="ms-2 d-flex align-items-center" id="admin-theme-controls">
                                    <div class="btn-group me-2" role="group" aria-label="Theme buttons">
                                        <button id="theme-light" class="btn btn-outline-primary">Light</button>
                                        <button id="theme-dark" class="btn btn-outline-primary">Dark</button>
                                        <button id="theme-auto" class="btn btn-outline-primary">Sistema</button>
                                    </div>
                                    <!--<div class="d-flex align-items-center">
                                        <label class="me-2 small text-muted mb-0" for="color-light">Colore light</label>
                                        <input type="color" id="color-light" title="Colore primario light" style="width:40px;height:32px;border:0;padding:0;border-radius:6px;">
                                    </div>
                                    <div class="d-flex align-items-center ms-2">
                                        <label class="me-2 small text-muted mb-0" for="color-dark">Colore dark</label>
                                        <input type="color" id="color-dark" title="Colore primario dark" style="width:40px;height:32px;border:0;padding:0;border-radius:6px;">
                                    </div>-->
                                </div>
                                <a href="/Logout" class="btn btn-outline-danger d-flex align-items-center justify-content-center">
                                    <i class="bi bi-box-arrow-right me-2"></i>
                                    <span class="d-none d-sm-inline">Esci</span>
                                </a>
                            </div>
                        </header>

                        <!-- Contenuto principale -->
                        <article class="admin-content animate__animated animate__fadeInUp animate__delay-1s">
                            <h2 class="mb-4 text-center">
                                <i class="bi bi-gear-fill text-primary me-2"></i>
                                Gestione del Sistema
                            </h2>

                            <!-- Sezione Contenuti -->
                            <section id="contenuti" class="row mb-5">
                                <div class="col-12">
                                    <h4 class="mb-3 text-primary">
                                        <i class="bi bi-newspaper me-2"></i>Gestione Contenuti
                                    </h4>
                                </div>
                                <!-- Prima riga: 3 card -->
                                <div class="col-xl-4 col-lg-4 col-md-6 col-sm-6 mb-3">
                                    <div class="card action-card h-100">
                                        <div class="card-body text-center">
                                            <i class="bi bi-newspaper display-4 text-primary mb-3"></i>
                                            <h5 class="card-title">Notizie</h5>
                                            <p class="card-text text-muted">Gestisci le notizie del sito</p>
                                            <a href="/admin/notizie" class="btn btn-primary btn-modern w-100 btn-notizie">Gestisci</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-4 col-lg-4 col-md-6 col-sm-6 mb-3">
                                    <div class="card action-card h-100">
                                        <div class="card-body text-center">
                                            <i class="bi bi-geo-alt display-4 text-warning mb-3"></i>
                                            <h5 class="card-title">Campi</h5>
                                            <p class="card-text text-muted">Gestisci campi e orari</p>
                                            <a href="/admin/campi" class="btn btn-warning btn-modern w-100 text-white">Gestisci</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-4 col-lg-4 col-md-12 col-sm-12 mb-3">
                                    <div class="card action-card h-100">
                                        <div class="card-body text-center">
                                            <i class="bi bi-calendar-event display-4 text-success mb-3"></i>
                                            <h5 class="card-title">Eventi</h5>
                                            <p class="card-text text-muted">Organizza e modifica gli eventi</p>
                                            <a href="/admin/eventi" class="btn btn-success btn-modern w-100 text-white">Gestisci</a>
                                        </div>
                                    </div>
                                </div>
                                <!-- Seconda riga: 2 card -->
                                <div class="col-xl-4 col-lg-4 col-md-6 col-sm-6 mb-3">
                                    <div class="card action-card h-100">
                                        <div class="card-body text-center">
                                            <i class="bi bi-images display-4 text-info mb-3"></i>
                                            <h5 class="card-title">Galleria</h5>
                                            <p class="card-text text-muted">Carica e organizza le immagini</p>
                                            <a href="/admin/galleria" class="btn btn-info btn-modern w-100 btn-galleria">Gestisci</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-4 col-lg-4 col-md-6 col-sm-6 mb-3">
                                    <div class="card action-card h-100">
                                        <div class="card-body text-center">
                                            <i class="bi bi-people display-4 text-secondary mb-3"></i>
                                            <h5 class="card-title">Squadre</h5>
                                            <p class="card-text text-muted">Gestisci le squadre e i giocatori</p>
                                            <a href="/admin/squadre" class="btn btn-secondary btn-modern w-100 text-white">Gestisci</a>
                                        </div>
                                    </div>
                                </div>
                                <!-- Terza riga: Campionati -->
                                <div class="col-xl-4 col-lg-4 col-md-12 col-sm-12 mb-3">
                                    <div class="card action-card h-100">
                                        <div class="card-body text-center">
                                            <i class="bi bi-trophy display-4 text-warning mb-3"></i>
                                            <h5 class="card-title">Campionati</h5>
                                            <p class="card-text text-muted">Gestisci campionati e classifiche</p>
                                            <a href="/admin/campionati" class="btn btn-warning btn-modern w-100 text-white">Gestisci</a>
                                        </div>
                                    </div>
                                </div>
                            </section>

                            <!-- Sezione Utenti -->
                            <section id="utenti" class="row mb-5">
                                <div class="col-12">
                                    <h4 class="mb-3 text-primary">
                                        <i class="bi bi-users me-2"></i>Gestione Utenti
                                    </h4>
                                </div>
                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 mb-3">
                                    <div class="card action-card h-100">
                                        <div class="card-body text-center">
                                            <i class="bi bi-person-lines-fill display-4 text-secondary mb-3"></i>
                                            <h5 class="card-title">Utenti</h5>
                                            <p class="card-text text-muted">Visualizza e gestisci tutti gli utenti</p>
                                            <a href="/admin/utenti" class="btn btn-secondary btn-modern w-100 text-white">Gestisci</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 mb-3">
                                    <div class="card action-card h-100">
                                        <div class="card-body text-center">
                                            <i class="bi bi-star display-4 text-danger mb-3"></i>
                                            <h5 class="card-title">Recensioni</h5>
                                            <p class="card-text text-muted">Modera e gestisci le recensioni</p>
                                            <a href="/admin/recensioni" class="btn btn-danger btn-modern w-100 text-white">Gestisci</a>
                                        </div>
                                    </div>
                                </div>
                            </section>

                            <!-- Sezione Strumenti -->
                            <section id="strumenti" class="row">
                                <div class="col-12">
                                    <h4 class="mb-3 text-primary">
                                        <i class="bi bi-tools me-2"></i>Strumenti e Statistiche
                                    </h4>
                                </div>
                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 mb-3">
                                    <div class="card action-card h-100">
                                        <div class="card-body text-center">
                                            <i class="bi bi-calendar-check display-4 text-dark mb-3"></i>
                                            <h5 class="card-title">Prenotazioni</h5>
                                            <p class="card-text text-muted">Gestisci le prenotazioni dei campi</p>
                                            <a href="/admin/prenotazioni" class="btn btn-dark btn-modern w-100 text-white">Gestisci</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 mb-3">
                                    <div class="card action-card h-100">
                                        <div class="card-body text-center">
                                            <i class="bi bi-bar-chart display-4 text-primary mb-3"></i>
                                            <h5 class="card-title">Statistiche</h5>
                                            <p class="card-text text-muted">Visualizza statistiche del sito</p>
                                            <a href="/admin/statistiche" class="btn btn-primary btn-modern w-100 btn-statistiche">Gestisci</a>
                                        </div>
                                    </div>
                                </div>
                            </section>
                        </article>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.4/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/assets/scripts/components/AdminSidebar.js"></script>
    <script src="/assets/scripts/components/Admin.js"></script>
    <script src="/assets/scripts/components/send_email.js"></script>
    <script src="/assets/scripts/components/AdminThemePicker.js"></script>
</body>
</html>
