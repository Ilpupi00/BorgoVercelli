<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profilo di <%= user.nome %> <%= user.cognome %> - Borgo Vercelli</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.4/dist/css/bootstrap.min.css" rel="stylesheet">
    <%- include('../../shared/views/partials/theme-includes') %>
    <link rel="stylesheet" href="/assets/styles/profilo-modern-additions.css">
    <link rel="stylesheet" href="/assets/styles/Navbar.css">
    <link rel="stylesheet" href="/assets/styles/Footer.css">
    <link rel="stylesheet" href="/assets/styles/evento-upload.css">
    <link rel="stylesheet" href="/assets/styles/image-editor.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.6.1/cropper.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.6.1/cropper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.4/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/assets/scripts/image-editor-common.js"></script>
    <script src="/assets/scripts/Profilo.js" defer></script>
</head>
<body>
    <%- include('partials/navbar') %>

    <main class="profile-container">
        <!-- Modern Profile Header -->
        <header class="profile-modern-header reveal reveal--fade-up text-center">
            <!-- Avatar Section with Action Buttons -->
            <div class="profile-avatar-container">
                <% if (imageUrl) { %>
                  <img src="<%= imageUrl %>?t=<%= Date.now() %>" alt="Foto profilo di <%= user.nome %> <%= user.cognome %>" class="profile-avatar-modern" onerror="this.onerror=null; this.src='/assets/images/Campo.png';">
                <% } else { %>
                  <div class="profile-avatar-placeholder" aria-hidden="true">
                    <svg class="person-ic" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
                      <path d="M12 12c2.761 0 5-2.239 5-5s-2.239-5-5-5-5 2.239-5 5 2.239 5 5 5z" fill="rgba(255,255,255,0.95)"/>
                      <path d="M2 20c0-3.314 4.03-6 10-6s10 2.686 10 6v1H2v-1z" fill="rgba(255,255,255,0.85)"/>
                    </svg>
                    <% if (user && (user.nome || user.cognome)) { %>
                      <div class="profile-initials"><%= (user.nome ? user.nome.charAt(0).toUpperCase() : '') + (user.cognome ? user.cognome.charAt(0).toUpperCase() : '') %></div>
                    <% } %>
                  </div>
                <% } %>
                
                <!-- Floating Action Buttons (temporaneamente qui, renderizzati sotto la scritta via DOM move) -->
                <% /* kept for backward compatibility: moved below */ %>
            </div>
            
            <!-- User Info -->
            <div class="position-relative profile-header-content">
                <h1 class="display-6 fw-bold text-white mb-3"><%= user.nome %> <%= user.cognome %></h1>
                
                <!-- Role Badges -->
                <div class="d-flex flex-wrap justify-content-center gap-2 mb-3">
                    <% if (user.tipo_utente_id === 1) { %>
                      <span class="role-badge admin"><i class="bi bi-shield-check"></i> Admin</span>
                    <% } else if (user.tipo_utente_id === 2) { %>
                      <span class="role-badge presidente"><i class="bi bi-person-badge"></i> Presidente</span>
                    <% } else if (user.tipo_utente_id === 3) { %>
                      <span class="role-badge vice"><i class="bi bi-person-badge-fill"></i> Vice Presidente</span>
                    <% } else if (user.tipo_utente_id === 4) { %>
                      <span class="role-badge dirigente"><i class="bi bi-briefcase"></i> Dirigente</span>
                    <% } else if (user.tipo_utente_id === 5) { %>
                      <span class="role-badge segretario"><i class="bi bi-file-earmark-text"></i> Segretario</span>
                    <% } else if (user.tipo_utente_id === 6) { %>
                      <span class="role-badge gestore"><i class="bi bi-clipboard-check"></i> Gestore Campo</span>
                    <% } else { %>
                      <span class="role-badge utente"><i class="bi bi-person-check"></i> Utente</span>
                    <% } %>
                    <% if (stats && stats.prenotazioni_totali > 10) { %>
                        <span class="badge bg-warning text-dark px-3 py-2 fs-6"><i class="bi bi-trophy me-1"></i> Giocatore Attivo</span>
                    <% } %>
                </div>
                
                <!-- Member Since -->
                <div class="mb-3">
                    <span class="badge bg-light text-dark px-4 py-2">
                        <i class="bi bi-calendar-check me-2"></i>
                        Membro dal <%= user.data_registrazione ? new Date(user.data_registrazione).toLocaleDateString('it-IT', { year: 'numeric', month: 'long' }) : 'N/D' %>
                    </span>
                </div>
                
                <!-- Contact Info Grid -->
                <div class="row g-2 mt-3 text-white justify-content-center">
                    <div class="col-12 col-sm-6 col-lg-3">
                        <div class="d-flex align-items-center justify-content-center gap-2">
                            <i class="bi bi-envelope fs-5"></i>
                            <a href="mailto:<%= user.email %>" class="text-white text-decoration-none small"><%= user.email %></a>
                        </div>
                    </div>
                    <% if (user.telefono) { %>
                    <div class="col-12 col-sm-6 col-lg-3">
                        <div class="d-flex align-items-center justify-content-center gap-2">
                            <i class="bi bi-telephone fs-5"></i>
                        <a href="tel:<%= (user.telefono || '').replace(/\s+/g,'') %>" class="text-white text-decoration-none small"><%= user.telefono %></a>
                        </div>
                    </div>
                    <% } %>
                    <% if (user.data_nascita) { %>
                    <div class="col-12 col-sm-6 col-lg-3">
                        <div class="d-flex align-items-center justify-content-center gap-2">
                            <i class="bi bi-calendar3 fs-5"></i>
                            <span class="small"><%= new Date(user.data_nascita).toLocaleDateString('it-IT') %></span>
                        </div>
                    </div>
                    <% } %>
                    <% if (user.codice_fiscale) { %>
                    <div class="col-12 col-sm-6 col-lg-3">
                        <div class="d-flex align-items-center justify-content-center gap-2">
                            <i class="bi bi-card-text fs-5"></i>
                            <span class="text-uppercase small"><%= user.codice_fiscale %></span>
                        </div>
                    </div>
                    <% } %>
                </div>
            </div>
            <!-- Floating Action Buttons: spostati sotto la scritta per migliore layout -->
            <div class="profile-actions-overlay">
              <% if (imageUrl) { %>
              <button type="button" class="profile-action-btn-modern btn-edit-photo" title="Modifica foto" aria-label="Modifica foto profilo" onclick="window.openImageEditor('<%= imageUrl %>')">
                <i class="bi bi-scissors"></i>
              </button>
              <% } %>
              <button type="button" class="profile-action-btn-modern btn-upload-photo" title="Cambia foto" aria-label="Carica nuova foto profilo" data-bs-toggle="modal" data-bs-target="#uploadPicModal">
                <i class="bi bi-camera-fill"></i>
              </button>
            </div>
        </header>

        <div class="row mt-4">
            <!-- Sezione sinistra: Statistiche e Link Rapidi -->
            <aside class="col-lg-4">
                <!-- Card Statistiche Modern -->
                <div class="modern-card reveal reveal--slide-left">
                    <div class="modern-card-header">
                        <i class="bi bi-bar-chart-line fs-4"></i>
                        <h5>Le tue Statistiche</h5>
                    </div>
                    <div class="modern-card-body">
                        <div class="row g-3">
                            <div class="col-12">
                                <div class="stat-box-modern">
                                    <div class="stat-number-modern"><%= stats.prenotazioni_totali || 0 %></div>
                                    <div class="stat-label-modern">
                                        <i class="bi bi-calendar-check-fill me-1"></i>
                                        Prenotazioni Totali
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="stat-box-modern">
                                <div class="stat-number-modern stat-number-modern--compact"><%= stats.recensioni_totali || 0 %></div>
                                <div class="stat-label-modern stat-label-modern--compact">
                                        <i class="bi bi-star-fill me-1"></i>
                                        Recensioni
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="stat-box-modern">
                                <div class="stat-number-modern stat-number-modern--compact"><%= stats.prenotazioni_mese || 0 %></div>
                                <div class="stat-label-modern stat-label-modern--compact">
                                        <i class="bi bi-calendar-event me-1"></i>
                                        Questo Mese
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Menu Funzionalità (no bottoni) -->
                <div class="modern-card reveal reveal--slide-left reveal--delay-1">
                    <div class="modern-card-header green-gradient">
                        <i class="bi bi-compass fs-4"></i>
                        <h5>Funzionalità</h5>
                    </div>
                    <div class="modern-card-body">
                      <nav class="action-menu" aria-label="Funzionalità profilo">
                        <a href="#" class="action-menu-item" data-action="edit-profile">
                          <span class="action-menu-left"><i class="bi bi-pencil"></i><span>Modifica Profilo</span></span>
                          <i class="bi bi-chevron-right"></i>
                        </a>

                        <a href="#" class="action-menu-item" id="enablePushBtn" role="button">
                          <span class="action-menu-left"><i class="bi bi-bell"></i><span>Notifiche</span></span>
                          <i class="bi bi-chevron-right"></i>
                        </a>

                        <a href="/users/mie-prenotazioni" class="action-menu-item">
                          <span class="action-menu-left"><i class="bi bi-calendar-check"></i><span>Le Mie Prenotazioni</span></span>
                          <i class="bi bi-chevron-right"></i>
                        </a>

                        <a href="/prenotazione" class="action-menu-item">
                          <span class="action-menu-left"><i class="bi bi-calendar-plus"></i><span>Prenota Campo</span></span>
                          <i class="bi bi-chevron-right"></i>
                        </a>

                        <a href="/eventi" class="action-menu-item">
                          <span class="action-menu-left"><i class="bi bi-calendar-event"></i><span>Eventi</span></span>
                          <i class="bi bi-chevron-right"></i>
                        </a>

                        <a href="/scrivi/Recensione" class="action-menu-item">
                          <span class="action-menu-left"><i class="bi bi-star"></i><span>Scrivi Recensione</span></span>
                          <i class="bi bi-chevron-right"></i>
                        </a>

                        <a href="/galleria" class="action-menu-item">
                          <span class="action-menu-left"><i class="bi bi-images"></i><span>Galleria Foto</span></span>
                          <i class="bi bi-chevron-right"></i>
                        </a>

                        <a href="#" class="action-menu-item" data-action="change-password">
                          <span class="action-menu-left"><i class="bi bi-key"></i><span>Cambia Password</span></span>
                          <i class="bi bi-chevron-right"></i>
                        </a>

                        <% if (user.tipo_utente_id === 1 || user.tipo_utente_id === 2 || user.tipo_utente_id === 3 || user.tipo_utente_id === 5) { %>
                          <div class="action-menu-sep" aria-hidden="true"></div>
                          <div class="action-menu-title">Area Staff</div>
                          <a href="/admin/squadre" class="action-menu-item">
                            <span class="action-menu-left"><i class="bi bi-people"></i><span>Gestione Squadre</span></span>
                            <i class="bi bi-chevron-right"></i>
                          </a>
                          <a href="/admin/notizie" class="action-menu-item">
                            <span class="action-menu-left"><i class="bi bi-newspaper"></i><span>Gestione Notizie</span></span>
                            <i class="bi bi-chevron-right"></i>
                          </a>
                          <a href="/admin/eventi" class="action-menu-item">
                            <span class="action-menu-left"><i class="bi bi-calendar-event"></i><span>Gestione Eventi</span></span>
                            <i class="bi bi-chevron-right"></i>
                          </a>
                          <a href="/admin/campi" class="action-menu-item">
                            <span class="action-menu-left"><i class="bi bi-pin-map"></i><span>Gestione Campi</span></span>
                            <i class="bi bi-chevron-right"></i>
                          </a>
                        <% } %>

                        <% if (user.tipo_utente_id === 4) { %>
                          <div class="action-menu-sep" aria-hidden="true"></div>
                          <div class="action-menu-title">Area Dirigente</div>
                          <% if (Array.isArray(dirigente) && dirigente.length > 0) { %>
                            <% dirigente.forEach(function(d){ %>
                              <a href="/squadre/gestione/<%= d.squadra_id %>" class="action-menu-item">
                                <span class="action-menu-left"><i class="bi bi-gear"></i><span>Gestisci <%= d.squadra_nome || ('Squadra ' + d.squadra_id) %></span></span>
                                <i class="bi bi-chevron-right"></i>
                              </a>
                            <% }); %>
                          <% } else if (dirigente && dirigente.squadra_id) { %>
                            <a href="/squadre/gestione/<%= dirigente.squadra_id %>" class="action-menu-item">
                              <span class="action-menu-left"><i class="bi bi-gear"></i><span>Gestione Squadra</span></span>
                              <i class="bi bi-chevron-right"></i>
                            </a>
                          <% } %>
                        <% } %>

                        <% if (user.tipo_utente_id === 6) { %>
                          <div class="action-menu-sep" aria-hidden="true"></div>
                          <div class="action-menu-title">Area Gestore</div>
                          <a href="/admin/campi" class="action-menu-item">
                            <span class="action-menu-left"><i class="bi bi-clipboard2-data"></i><span>Gestione Campi</span></span>
                            <i class="bi bi-chevron-right"></i>
                          </a>
                          <a href="/admin/prenotazioni" class="action-menu-item">
                            <span class="action-menu-left"><i class="bi bi-calendar-check"></i><span>Gestione Prenotazioni</span></span>
                            <i class="bi bi-chevron-right"></i>
                          </a>
                        <% } %>

                        <div class="action-menu-sep" aria-hidden="true"></div>
                        <a href="/Logout" class="action-menu-item action-menu-item--danger">
                          <span class="action-menu-left"><i class="bi bi-box-arrow-right"></i><span>Logout</span></span>
                          <i class="bi bi-chevron-right"></i>
                        </a>
                      </nav>
                    </div>
                </div>

                <!-- Card Preferenze e Sicurezza -->
                <div class="modern-card reveal reveal--slide-left reveal--delay-2">
                    <div class="modern-card-header info-gradient">
                        <i class="bi bi-gear fs-4"></i>
                        <h5>Preferenze e Sicurezza</h5>
                    </div>
                    <div class="modern-card-body">
                    <a href="#" class="action-menu-item action-menu-item--inline" data-action="change-password">
                      <span class="action-menu-left"><i class="bi bi-key"></i><span>Cambia Password</span></span>
                      <i class="bi bi-chevron-right"></i>
                    </a>
                        
                        <div class="row g-3">
                            <div class="col-12">
                            <div class="p-3 rounded-3 surface-neutral">
                                    <small class="text-muted d-block mb-1">Ruolo preferito:</small>
                                    <div class="fw-bold"><%= user.ruolo_preferito || 'Non specificato' %></div>
                                </div>
                            </div>
                            <div class="col-12">
                            <div class="p-3 rounded-3 surface-neutral">
                                    <small class="text-muted d-block mb-1">Piede preferito:</small>
                                    <div class="fw-bold"><%= user.piede_preferito || 'Non specificato' %></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </aside>

            <!-- Sezione destra: Attività e Dettagli -->
            <section class="col-lg-8">
                <!-- Card Attività Recente Modern -->
                <div class="modern-card reveal reveal--slide-right">
                    <div class="modern-card-header warning-gradient">
                        <i class="bi bi-activity fs-4"></i>
                        <h5>Attività Recente</h5>
                    </div>
                    <div class="modern-card-body">
                        <% if ((activity.prenotazioni && activity.prenotazioni.length > 0) || (activity.recensioni && activity.recensioni.length > 0)) { %>
                            <div class="timeline-modern">
                                <% (activity.prenotazioni || []).slice(0, 2).forEach(prenotazione => { %>
                                    <div class="timeline-item-modern">
                                        <div class="timeline-dot-modern"></div>
                                        <div class="d-flex align-items-start gap-3">
                                      <div class="rounded-circle bg-success d-flex align-items-center justify-content-center text-white timeline-bubble">
                                                <i class="bi bi-calendar-check fs-4"></i>
                                            </div>
                                            <div class="flex-grow-1">
                                                <div class="fw-bold text-dark mb-1">Prenotazione Campo</div>
                                                <div class="text-muted mb-1">
                                                    <%= prenotazione.campo_nome || 'Campo' %> - 
                                                    <%= new Date(prenotazione.data_prenotazione).toLocaleDateString('it-IT') %> alle <%= prenotazione.ora_inizio %>
                                                </div>
                                                <small class="text-muted">
                                                    <i class="bi bi-clock me-1"></i>
                                                    <%= new Date(prenotazione.created_at).toLocaleDateString('it-IT') %>
                                                </small>
                                            </div>
                                        </div>
                                    </div>
                                <% }); %>

                                <% (activity.recensioni || []).slice(0, 2).forEach(recensione => { %>
                                    <div class="timeline-item-modern">
                                        <div class="timeline-dot-modern"></div>
                                        <div class="d-flex align-items-start gap-3">
                                      <div class="rounded-circle bg-warning d-flex align-items-center justify-content-center text-white timeline-bubble">
                                                <i class="bi bi-star fs-4"></i>
                                            </div>
                                            <div class="flex-grow-1">
                                                <div class="fw-bold text-dark mb-1">Recensione Scritta</div>
                                                <div class="text-muted mb-1">
                                                    "<%= recensione.titolo %>" - <%= '★'.repeat(recensione.valutazione) %>
                                                </div>
                                                <small class="text-muted">
                                                    <i class="bi bi-clock me-1"></i>
                                                    <%= new Date(recensione.created_at).toLocaleDateString('it-IT') %>
                                                </small>
                                            </div>
                                        </div>
                                    </div>
                                <% }); %>
                            </div>
                        <% } else { %>
                            <div class="text-center py-5">
                                <i class="bi bi-info-circle display-1 text-muted mb-3"></i>
                                <h6 class="text-muted mb-3">Nessuna attività recente</h6>
                                <p class="text-muted small">Le tue attività appariranno qui quando prenoterai campi o scriverai recensioni.</p>
                            </div>
                        <% } %>
                    </div>
                </div>

                <!-- Card Informazioni Sportive Modern -->
                <% if (giocatore) { %>
                <div class="modern-card reveal reveal--slide-right reveal--delay-1">
                    <div class="modern-card-header green-gradient">
                        <i class="bi bi-trophy fs-4"></i>
                        <h5>Informazioni Sportive</h5>
                    </div>
                    <div class="modern-card-body">
                        <div class="row g-3">
                            <div class="col-6">
                            <div class="p-3 rounded-3 h-100 surface-neutral">
                                    <i class="bi bi-person-badge text-success fs-4 mb-2 d-block"></i>
                                    <small class="text-muted d-block">Ruolo</small>
                                    <div class="fw-bold"><%= giocatore.ruolo || 'Non specificato' %></div>
                                </div>
                            </div>
                            <div class="col-6">
                            <div class="p-3 rounded-3 h-100 surface-neutral">
                                    <i class="bi bi-hash text-success fs-4 mb-2 d-block"></i>
                                    <small class="text-muted d-block">Numero Maglia</small>
                                    <div class="fw-bold"><%= giocatore.numero_maglia || 'N/A' %></div>
                                </div>
                            </div>
                            <div class="col-6">
                            <div class="p-3 rounded-3 h-100 surface-neutral">
                                    <i class="bi bi-calendar-event text-success fs-4 mb-2 d-block"></i>
                                    <small class="text-muted d-block">Tesseramento</small>
                                    <div class="fw-bold"><%= giocatore.data_inizio_tesseramento ? new Date(giocatore.data_inizio_tesseramento).getFullYear() : 'N/D' %></div>
                                </div>
                            </div>
                            <div class="col-6">
                            <div class="p-3 rounded-3 h-100 surface-neutral">
                                    <i class="bi bi-flag text-success fs-4 mb-2 d-block"></i>
                                    <small class="text-muted d-block">Nazionalità</small>
                                    <div class="fw-bold"><%= giocatore.nazionalita || 'Non specificata' %></div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <% } %>

                <!-- Card Ruolo Dirigenziale Modern -->
                <% if (user.tipo_utente_id >= 1) { %>
                <div class="modern-card reveal reveal--slide-right reveal--delay-2">
                    <div class="modern-card-header warning-gradient">
                        <i class="bi bi-briefcase fs-4"></i>
                        <h5>Ruolo Dirigenziale</h5>
                    </div>
                    <div class="modern-card-body">
                        <% var primoDir = Array.isArray(dirigente) ? dirigente[0] : dirigente; %>
                        <div class="row g-3">
                          <div class="col-6">
                            <div class="p-3 rounded-3 surface-warm">
                              <i class="bi bi-building text-warning fs-4 mb-2 d-block"></i>
                              <small class="text-muted d-block">Squadra</small>
                              <div class="fw-bold"><%= primoDir && primoDir.squadra_nome ? primoDir.squadra_nome : 'Societario' %></div>
                            </div>
                          </div>
                          <div class="col-6">
                            <div class="p-3 rounded-3 surface-warm">
                              <i class="bi bi-person-badge text-warning fs-4 mb-2 d-block"></i>
                              <small class="text-muted d-block">Ruolo</small>
                              <div class="fw-bold"><%= primoDir && primoDir.ruolo ? primoDir.ruolo : 'Non specificato' %></div>
                            </div>
                          </div>
                          <div class="col-6">
                            <div class="p-3 rounded-3 surface-warm">
                              <i class="bi bi-calendar-check text-warning fs-4 mb-2 d-block"></i>
                              <small class="text-muted d-block">Nomina</small>
                              <div class="fw-bold"><%= primoDir && primoDir.data_nomina ? new Date(primoDir.data_nomina).toLocaleDateString('it-IT') : 'Non specificata' %></div>
                            </div>
                          </div>
                          <div class="col-6">
                            <div class="p-3 rounded-3 surface-warm">
                              <i class="bi bi-calendar-x text-warning fs-4 mb-2 d-block"></i>
                              <small class="text-muted d-block">Scadenza</small>
                              <div class="fw-bold"><%= primoDir && primoDir.data_scadenza ? new Date(primoDir.data_scadenza).toLocaleDateString('it-IT') : 'Non specificata' %></div>
                            </div>
                          </div>
                        </div>
                        <div class="text-center mt-3">
                          <% if (Array.isArray(dirigente) && dirigente.length > 0) { %>
                            <% dirigente.forEach(function(d){ %>
                              <a href="/squadre/gestione/<%= d.squadra_id %>" class="btn btn-warning modern-btn text-white mb-2 me-2"><%= d.squadra_nome || ('Squadra ' + d.squadra_id) %></a>
                            <% }); %>
                          <% } else if (primoDir && primoDir.squadra_id) { %>
                            <a href="/squadre/gestione/<%= primoDir.squadra_id %>" class="btn btn-warning modern-btn text-white">Gestione Squadra</a>
                          <% } else { %>
                            <span class="text-muted">Nessuna squadra assegnata</span>
                          <% } %>
                        </div>
                    </div>
                </div>
                
