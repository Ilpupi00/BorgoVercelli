<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profilo di <%= user.nome %> <%= user.cognome %> - Borgo Vercelli</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.4/dist/css/bootstrap.min.css" rel="stylesheet">
    <%- include('../../shared/views/partials/theme-includes') %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/assets/styles/Profilo.css">
    <link rel="stylesheet" href="/assets/styles/Navbar.css">
    <link rel="stylesheet" href="/assets/styles/Footer.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.4/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/assets/scripts/Profilo.js" defer></script>
</head>
<body>
    <%- include('partials/navbar') %>

    <div class="profile-container">
        <!-- Header principale con avatar e info base -->
        <div class="profile-header-card animate__animated animate__fadeIn animate__faster">
            <div class="row align-items-center">
                <div class="col-md-4 text-center">
                    <div class="profile-avatar mb-3 animate__animated animate__zoomIn">
                        <div class="position-relative d-inline-block pt-2">
                            <% if (imageUrl) { %>
                                <img src="<%= imageUrl %>?t=<%= Date.now() %>" alt="Immagine profilo" class="rounded-circle profile-img-main" onerror="this.onerror=null; this.src='/assets/images/Campo.png';">
                            <% } else { %>
                                <i class="bi bi-person-circle profile-img-main"></i>
                            <% } %>
                            <button id="editPicBtn" type="button" class="btn btn-primary position-absolute bottom-0 end-0 rounded-circle p-2 shadow" title="Modifica foto" data-bs-toggle="modal" data-bs-target="#uploadPicModal">
                                <span class="bi bi-camera-fill"></span>
                            </button>
                        </div>
                    </div>
                    <div class="user-badges mt-2">
                        <% if (user.tipo_utente_id === 1) { %>
                            <span class="badge bg-danger me-1"><i class="bi bi-shield-check"></i> Admin</span>
                        <% } else if (user.tipo_utente_id === 2) { %>
                            <span class="badge bg-warning me-1 mb-1"><i class="bi bi-briefcase"></i> Dirigente</span>
                        <% } else { %>
                            <span class="badge bg-success me-1"><i class="bi bi-person-check"></i> Utente</span>
                        <% } %>
                        <% if (stats && stats.prenotazioni_totali > 10) { %>
                            <span class="badge bg-info"><i class="bi bi-trophy"></i> Giocatore Attivo</span>
                        <% } %>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="profile-info">
                        <h1 class="display-5 fw-bold text-white mb-2"><%= user.nome %> <%= user.cognome %></h1>
                        <p class="text-white mb-3 fs-5">
                            <i class="bi bi-envelope me-2"></i><%= user.email %>
                            <% if (user.telefono) { %>
                                <br><i class="bi bi-telephone me-2"></i><%= user.telefono %>
                            <% } %>
                        </p>
                        <div class="member-since">
                            <i class="bi bi-calendar-check text-white me-2"></i>
                            <span class="text-white">Utente dal <%= user.data_registrazione ? new Date(user.data_registrazione).toLocaleDateString('it-IT', { year: 'numeric', month: 'long' }) : 'N/D' %></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <!-- Colonna sinistra: Statistiche e Link Rapidi -->
            <div class="col-lg-4">
                <!-- Card Statistiche -->
                <div class="card stats-card animate__animated animate__fadeInLeft animate__faster">
                    <div class="card-header bg-primary text-white">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-bar-chart-line me-2"></i>Le tue Statistiche
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="stat-item">
                            <div class="stat-icon">
                                <i class="bi bi-calendar-check-fill text-success"></i>
                            </div>
                            <div class="stat-content">
                                <div class="stat-number"><%= stats.prenotazioni_totali || 0 %></div>
                                <div class="stat-label">Prenotazioni Totali</div>
                            </div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-icon">
                                <i class="bi bi-star-fill text-warning"></i>
                            </div>
                            <div class="stat-content">
                                <div class="stat-number"><%= stats.recensioni_totali || 0 %></div>
                                <div class="stat-label">Recensioni Scritte</div>
                            </div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-icon">
                                <i class="bi bi-calendar-event text-info"></i>
                            </div>
                            <div class="stat-content">
                                <div class="stat-number"><%= stats.prenotazioni_mese || 0 %></div>
                                <div class="stat-label">Questo Mese</div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Card Link Rapidi -->
                <div class="card quick-links-card animate__animated animate__fadeInLeft animate__faster mt-3">
                    <div class="card-header bg-success text-white">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-lightning-charge me-2"></i>Azioni Rapide
                        </h5>
                    </div>
                    <div class="card-body">
                        <button class="btn btn-outline-primary w-100 mb-2" onclick="modificaPreferenze()">
                            <i class="bi bi-pencil me-2"></i>Modifica Profilo
                        </button>
                        <a href="/users/mie-prenotazioni" class="btn btn-outline-info w-100 mb-2">
                            <i class="bi bi-calendar-check me-2"></i>Le Mie Prenotazioni
                        </a>
                        <a href="/prenotazione" class="btn btn-outline-success w-100 mb-2">
                            <i class="bi bi-calendar-plus me-2"></i>Prenota Campo
                        </a>
                        <a href="/eventi" class="btn btn-outline-primary w-100 mb-2">
                            <i class="bi bi-calendar-event me-2"></i>Vedi Eventi
                        </a>
                        <a href="/scrivi/Recensione" class="btn btn-outline-warning w-100 mb-2">
                            <i class="bi bi-star me-2"></i>Scrivi Recensione
                        </a>
                        <a href="/galleria" class="btn btn-outline-info w-100 mb-2">
                            <i class="bi bi-images me-2"></i>Galleria Foto
                        </a>
                        <a href="/Logout" class="btn btn-outline-danger w-100">
                            <i class="bi bi-box-arrow-right me-2"></i>Logout
                        </a>
                    </div>
                </div>

                <!-- Card Preferenze Sportive -->
                <div class="card preferences-card animate__animated animate__fadeInLeft animate__faster mt-3">
                    <div class="card-header bg-info text-white">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-gear me-2"></i>Preferenze e Sicurezza
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-12 mb-3">
                                <button class="btn btn-outline-secondary w-100 mb-2" onclick="cambiaPassword()">
                                    <i class="bi bi-key me-2"></i>Cambia Password
                                </button>
                            </div>
                        </div>
                        <div class="preference-item">
                            <small class="text-muted">Ruolo preferito:</small>
                            <div class="fw-bold"><%= user.ruolo_preferito || 'Non specificato' %></div>
                        </div>
                        <div class="preference-item">
                            <small class="text-muted">Piede preferito:</small>
                            <div class="fw-bold"><%= user.piede_preferito || 'Non specificato' %></div>
                        </div>
                    </div>
                </div>

        

            </div>

            <!-- Colonna destra: Attività e Dettagli -->
            <div class="col-lg-8">
                <!-- Card Attività Recente -->
                <div class="card activity-card animate__animated animate__fadeInRight animate__faster">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-activity me-2"></i>Attività Recente
                        </h5>
                    </div>
                    <div class="card-body">
                        <% if ((activity.prenotazioni && activity.prenotazioni.length > 0) || (activity.recensioni && activity.recensioni.length > 0)) { %>
                            <div class="activity-timeline">
                                <% (activity.prenotazioni || []).slice(0, 2).forEach(prenotazione => { %>
                                    <div class="activity-item">
                                        <div class="activity-icon bg-success">
                                            <i class="bi bi-calendar-check"></i>
                                        </div>
                                        <div class="activity-content">
                                            <div class="activity-title">Prenotazione Campo</div>
                                            <div class="activity-details">
                                                <%= prenotazione.campo_nome || 'Campo' %> -
                                                <%= new Date(prenotazione.data_prenotazione).toLocaleDateString('it-IT') %> alle <%= prenotazione.ora_inizio %>
                                            </div>
                                            <small class="text-muted">
                                                <%= new Date(prenotazione.created_at).toLocaleDateString('it-IT') %>
                                            </small>
                                        </div>
                                    </div>
                                <% }); %>

                                <% (activity.recensioni || []).slice(0, 2).forEach(recensione => { %>
                                    <div class="activity-item">
                                        <div class="activity-icon bg-warning">
                                            <i class="bi bi-star"></i>
                                        </div>
                                        <div class="activity-content">
                                            <div class="activity-title">Recensione Scritta</div>
                                            <div class="activity-details">
                                                "<%= recensione.titolo %>" - <%= '★'.repeat(recensione.valutazione) %>
                                            </div>
                                            <small class="text-muted">
                                                <%= new Date(recensione.created_at).toLocaleDateString('it-IT') %>
                                            </small>
                                        </div>
                                    </div>
                                <% }); %>
                            </div>
                        <% } else { %>
                            <div class="text-center py-4">
                                <i class="bi bi-info-circle display-4 text-muted mb-3"></i>
                                <p class="text-muted">Nessuna attività recente da mostrare.</p>
                                <p class="text-muted small">Le tue attività appariranno qui quando prenoterai campi o scriverai recensioni.</p>
                            </div>
                        <% } %>
                    </div>
                </div>

                <!-- Card Informazioni Sportive -->
                <% if (giocatore) { %>
                <div class="card sports-card animate__animated animate__fadeInRight animate__faster mt-3">
                    <div class="card-header bg-success text-white">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-trophy me-2"></i>Informazioni Sportive
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="sports-info">
                                    <i class="bi bi-person-badge text-success me-2"></i>
                                    <strong>Ruolo:</strong> <%= giocatore.ruolo || 'Non specificato' %>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="sports-info">
                                    <i class="bi bi-hash text-success me-2"></i>
                                    <strong>Numero Maglia:</strong> <%= giocatore.numero_maglia || 'N/A' %>
                                </div>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-md-6">
                                <div class="sports-info">
                                    <i class="bi bi-calendar-event text-success me-2"></i>
                                    <strong>Tesseramento:</strong> <%= giocatore.data_inizio_tesseramento ? new Date(giocatore.data_inizio_tesseramento).getFullYear() : 'N/D' %>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="sports-info">
                                    <i class="bi bi-flag text-success me-2"></i>
                                    <strong>Nazionalità:</strong> <%= giocatore.nazionalita || 'Non specificata' %>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <% } %>

                <!-- Card Ruolo Dirigenziale -->
                <% if (user.tipo_utente_id === 2) { %>
                <div class="card management-card animate__animated animate__fadeInRight animate__faster mt-3">
                    <div class="card-header bg-warning text-dark">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-briefcase me-2"></i>Ruolo Dirigenziale
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="management-info">
                                    <i class="bi bi-building text-warning me-2"></i>
                                    <strong>Squadra:</strong> <%= dirigente?.squadra_nome || 'Societario' %>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="management-info">
                                    <i class="bi bi-person-badge text-warning me-2"></i>
                                    <strong>Ruolo:</strong> <%= dirigente?.ruolo || 'Non specificato' %>
                                </div>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-md-6">
                                <div class="management-info">
                                    <i class="bi bi-calendar-check text-warning me-2"></i>
                                    <strong>Nomina:</strong> <%= dirigente?.data_nomina ? new Date(dirigente.data_nomina).toLocaleDateString('it-IT') : 'Non specificata' %>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="management-info">
                                    <i class="bi bi-calendar-x text-warning me-2"></i>
                                    <strong>Scadenza:</strong> <%= dirigente?.data_scadenza ? new Date(dirigente.data_scadenza).toLocaleDateString('it-IT') : 'Non specificata' %>
                                </div>
                            </div>
                        </div>
                        <div class="row justify-content-center align-center">
                          <div class="col-md-6 text-center text-white mt-3 gestione_bottone">
                            <% if (dirigente && dirigente.squadra_id) { %>
                              <a href="/squadre/gestione/<%= dirigente.squadra_id %>" class="btn btn-warning text-white">Gestione Squadra</a>
                            <% } else { %>
                              <span class="text-muted">Nessuna squadra assegnata</span>
                            <% } %>
                          </div>
                        </div>
                    </div>
                </div>
                <div class="card actions-card animate__animated animate__fadeInRight animate__faster mt-3">
                  <div class="card-header bg-gradient-primary text-white">
                    <h5 class="card-title mb-0">
                      <i class="bi bi-plus-circle-fill me-2"></i>Gestione Contenuti
                    </h5>
                  </div>
                  <div class="card-body">
                    <p class="text-muted mb-4">Come dirigente, puoi creare e gestire eventi e notizie per la comunità.</p>
                    <div class="row g-3">
                      <div class="col-md-6">
                        <a href="/evento/crea-evento" class="btn btn-gradient-event w-100 py-3 position-relative overflow-hidden">
                          <div class="d-flex flex-column align-items-center">
                            <i class="bi bi-calendar-plus-fill fs-2 mb-2"></i>
                            <span class="fw-bold">Crea Nuovo Evento</span>
                            <small class="opacity-75">Organizza attività per la squadra</small>
                          </div>
                          <div class="position-absolute top-0 end-0 bg-primary bg-opacity-90 rounded-start-pill px-2 py-1">
                            <i class="bi bi-chevron-right text-white"></i>
                          </div>
                        </a>
                      </div>
                      <div class="col-md-6">
                        <a href="/notizie/crea_notizie" class="btn btn-gradient-news w-100 py-3 position-relative overflow-hidden">
                          <div class="d-flex flex-column align-items-center">
                            <i class="bi bi-newspaper fs-2 mb-2"></i>
                            <span class="fw-bold">Crea Nuova Notizia</span>
                            <small class="opacity-75">Condividi aggiornamenti importanti</small>
                          </div>
                          <div class="position-absolute top-0 end-0 bg-primary bg-opacity-90 rounded-start-pill px-2 py-1">
                            <i class="bi bi-chevron-right text-white"></i>
                          </div>
                        </a>
                      </div>
                    </div>
                    <div class="text-center mt-3">
                      <small class="text-muted">
                        <i class="bi bi-info-circle me-1"></i>
                        Tutti i contenuti verranno pubblicati dopo la revisione
                      </small>
                    </div>
                  </div>
                </div>
                <% } %>

                <!-- Card Le Mie Recensioni -->
                <div class="card reviews-card animate__animated animate__fadeInRight animate__faster mt-3">
                    <div class="card-header bg-info text-white">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-star me-2"></i>Le Mie Recensioni
                        </h5>
                    </div>
                    <div class="card-body">
                        <div id="userReviewsContainer">
                            <div class="text-center py-3">
                                <div class="spinner-border text-info" role="status">
                                    <span class="visually-hidden">Caricamento...</span>
                                </div>
                                <p class="text-muted mt-2">Caricamento recensioni...</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Card Le Mie Notizie ed Eventi -->
                <% if (user.tipo_utente_id === 2 || user.tipo_utente_id === 1) { %>
                <div class="card news-events-card animate__animated animate__fadeInRight animate__faster mt-3">
                    <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-newspaper me-2"></i>I Miei Contenuti
                        </h5>
                        <span class="badge bg-light text-dark" id="contentCount">0 elementi</span>
                    </div>
                    <div class="card-body">
                        <div id="userNewsEventsContainer">
                            <% if ((notiziePersonali && notiziePersonali.length > 0) || (eventiPersonali && eventiPersonali.length > 0)) { %>
                                <div class="news-events-list">
                                    <% (notiziePersonali || []).forEach(notizia => { %>
                                        <div class="news-event-item d-flex align-items-center justify-content-between p-3 border-bottom hover-shadow">
                                            <div class="d-flex align-items-center flex-grow-1">
                                                <div class="news-event-icon bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3">
                                                    <i class="bi bi-newspaper fs-5"></i>
                                                </div>
                                                <div class="flex-grow-1">
                                                    <h6 class="mb-1 text-truncate"><%= notizia.titolo %></h6>
                                                    <p class="mb-1 text-muted small text-truncate"><%= notizia.sottotitolo || ((notizia.contenuto || '').replace(/<[^>]*>/g, '').substring(0, 80) + (notizia.contenuto && notizia.contenuto.length > 80 ? '...' : '')) %></p>
                                                    <small class="text-muted">
                                                        <i class="bi bi-calendar me-1"></i>
                                                        <%= notizia.data_pubblicazione ? new Date(notizia.data_pubblicazione).toLocaleDateString('it-IT') : 'Data non disponibile' %>
                                                        <% if (notizia.pubblicata === 1) { %>
                                                            <span class="badge bg-success ms-2">Pubblicato</span>
                                                        <% } else { %>
                                                            <span class="badge bg-warning ms-2">Bozza</span>
                                                        <% } %>
                                                    </small>
                                                </div>
                                            </div>
                                            <div class="btn-group" role="group">
                                                <% if (notizia.id || notizia.N_id) { %>
                                                    <a href="/notizie/edit/<%= notizia.id || notizia.N_id %>" class="btn btn-sm btn-outline-primary" title="Modifica notizia">
                                                        <i class="bi bi-pencil"></i>
                                                    </a>
                                                    <button class="btn btn-sm btn-outline-info" title="Visualizza" onclick="window.open('/notizia/<%= notizia.id || notizia.N_id %>', '_blank')">
                                                        <i class="bi bi-eye"></i>
                                                    </button>
                                                <% } else { %>
                                                    <button class="btn btn-sm btn-outline-secondary" disabled title="ID notizia non valido">
                                                        <i class="bi bi-eye-slash"></i>
                                                    </button>
                                                <% } %>
                                            </div>
                                        </div>
                                    <% }); %>

                                    <% (eventiPersonali || []).forEach(evento => { %>
                                        <div class="news-event-item d-flex align-items-center justify-content-between p-3 border-bottom hover-shadow">
                                            <div class="d-flex align-items-center flex-grow-1">
                                                <div class="news-event-icon bg-success text-white rounded-circle d-flex align-items-center justify-content-center me-3">
                                                    <i class="bi bi-calendar-event fs-5"></i>
                                                </div>
                                                <div class="flex-grow-1">
                                                    <h6 class="mb-1 text-truncate"><%= evento.titolo %></h6>
                                                    <p class="mb-1 text-muted small text-truncate"><%= evento.descrizione ? ((evento.descrizione || '').replace(/<[^>]*>/g, '').substring(0, 80) + (evento.descrizione && evento.descrizione.length > 80 ? '...' : '')) : 'Nessuna descrizione' %></p>
                                                    <small class="text-muted">
                                                        <i class="bi bi-calendar me-1"></i>
                                                        <%= evento.data_inizio ? new Date(evento.data_inizio).toLocaleDateString('it-IT') : 'Data non disponibile' %>
                                                        <% if (evento.ora_inizio) { %>
                                                            <i class="bi bi-clock me-1 ms-2"></i><%= evento.ora_inizio %>
                                                        <% } %>
                                                        <% if (evento.pubblicato === 1 || evento.pubblicato === true) { %>
                                                            <span class="badge bg-success ms-2">Pubblicato</span>
                                                        <% } else { %>
                                                            <span class="badge bg-warning ms-2">Bozza</span>
                                                        <% } %>
                                                    </small>
                                                </div>
                                            </div>
                                            <div class="btn-group" role="group">
                                                <a href="/evento/crea-evento/<%= evento.id %>" class="btn btn-sm btn-outline-success" title="Modifica evento">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <button class="btn btn-sm btn-outline-info" title="Visualizza" onclick="window.open('/evento/<%= evento.id %>', '_blank')">
                                                    <i class="bi bi-eye"></i>
                                                </button>
                                            </div>
                                        </div>
                                    <% }); %>
                                </div>
                            <% } else { %>
                                <div class="text-center py-5">
                                    <div class="empty-state-icon mb-3">
                                        <i class="bi bi-plus-circle text-muted"></i>
                                    </div>
                                    <h6 class="text-muted mb-3">Nessun contenuto creato</h6>
                                    <p class="text-muted small mb-4">Inizia creando il tuo primo evento o notizia per la comunità.</p>
                                    <div class="d-flex justify-content-center gap-2">
                                        <a href="/evento/crea-evento" class="btn btn-outline-success">
                                            <i class="bi bi-calendar-plus me-2"></i>Crea Evento
                                        </a>
                                        <a href="/notizie/crea_notizie" class="btn btn-outline-primary">
                                            <i class="bi bi-newspaper me-2"></i>Crea Notizia
                                        </a>
                                    </div>
                                </div>
                            <% } %>
                        </div>
                    </div>
                </div>
                <% } %>
            </div>
        </div>
    </div>


    <!-- Modal Modifica Profilo -->
<div class="modal fade" id="editProfileModal" tabindex="-1" aria-labelledby="editProfileModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header bg-primary text-white">
        <h5 class="modal-title" id="editProfileModalLabel">
          <i class="bi bi-pencil me-2"></i>Modifica Profilo
        </h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
