<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Galleria</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.4/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-DQvkBjpPgn7RC31MCQoOeC9TI2kdqa4+BSgNMNj8v77fdC77Kj5zpWFTJaaAoMbC" crossorigin="anonymous">
    <%- include('../../shared/views/partials/theme-includes') %>
    <link rel="stylesheet" href="/assets/styles/scroll-animations.css">
    <link rel="stylesheet" href="/assets/styles/Navbar.css">
    <link rel="stylesheet" href="/assets/styles/Footer.css">
    <link rel="stylesheet" href="/assets/styles/Galleria.css">
    <link rel="stylesheet" href="/assets/styles/theme-galleria.css">
</head>
<body>
    <%- include('partials/navbar') %>
    <div id="page">
        <header class="text-center py-3 text-white overflow-hidden">
            <div class="row reveal reveal--zoom-out">
                <div class="img-container">
                    <img src="<%= immagini.length > 0 ? immagini[0].url : '/assets/images/Campo.png' %>" alt="<%= immagini.length > 0 ? immagini[0].descrizione || 'Immagine della galleria' : 'Immagine predefinita' %>" class="centered-image">
                </div>
            </div>
        </header>
        <section class="gallery-section mt-0">
            <div class="container">
                <h2 class="text-center mb-5 overflow-hidden reveal reveal--fade-up">La Nostra Galleria</h2>
                <div class="text-center mb-4 reveal reveal--scale-up reveal--delay-1">
                    <label for="uploadPhoto" class="btn btn-success upload-btn">
                        <i class="bi bi-cloud-upload"></i> Carica Foto
                    </label>
                    <input type="file" id="uploadPhoto" class="d-none" accept="image/*">
                </div>
                <div class="gallery-container">
                    <% immagini.slice(0, 8).forEach((img, index) => { %>
                        <div class="gallery-item reveal reveal--fade-up reveal--delay-<%= Math.min(index + 1, 5) %>">
                            <button class="image-wrapper p-0 border-0 bg-transparent w-100" type="button" data-image-url="<%= img.url %>" data-image-alt="<%= img.descrizione || 'Immagine della galleria' %>">
                                <img src="<%= img.url %>"
                                     class="img-fluid rounded gallery-image w-100"
                                     alt="<%= img.descrizione || 'Immagine della galleria' %>"
                                     onerror="this.onerror=null; this.src='/assets/images/Campo.png'; this.alt='Immagine non disponibile';"
                                     loading="lazy">
                                <div class="overlay">
                                    <span class="btn btn-primary btn-sm">
                                        <i class="bi bi-eye"></i> Visualizza
                                    </span>
                                </div>
                            </button>
                        </div>
                    <% }); %>
                </div>
                <% if (immagini.length > 8) { %>
                    <div class="text-center mb-5 reveal reveal--fade-up">
                        <button id="loadMoreBtn" class="btn-primary">
                            <i class="fas fa-plus-circle"></i> Pi√π Immagini
                        </button>
                    </div>
                <% } %>
            </div>
        </section>
    </div>
    <%- include('partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.4/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/assets/scripts/scroll-reveal.js"></script>
    <script type="module">
        import Galleria from '/assets/scripts/components/Galleria.js';
        
        new Galleria(document.getElementById('page'));
    </script>
</body>
</html>