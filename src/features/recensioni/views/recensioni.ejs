<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Recensioni</title>
    <link href="/assets/styles/Navbar.css" rel="stylesheet" type="text/css">
    <link href="/assets/styles/Footer.css" rel="stylesheet" type="text/css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.4/dist/css/bootstrap.min.css" rel="stylesheet">
    <%- include('../../shared/views/partials/theme-includes') %>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <%- include('../../shared/views/partials/theme-includes') %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
    <link href="/assets/styles/Recensioni.css" rel="stylesheet" type="text/css">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.4/dist/js/bootstrap.bundle.min.js" defer>
    <%- include('../../shared/views/partials/theme-includes') %></script>
        <script>
            window.reviews = <%- JSON.stringify(reviews || []) %>;
        </script>
        <script src="/assets/scripts/recensioni.js" type="module" defer></script>
</head>
<body>
    <%- include('partials/navbar') %>

    <main>
        <section class="hero-section bg-light text-dark py-5">
            <div class="container">
                <div class="row justify-content-center text-center">
                    <div class="col-12 col-md-8">
                        <h1 class="display-4 fw-bold mb-3 reveal reveal--text-mask">Recensioni dei Nostri Clienti</h1>
                        <p class="lead mb-4 reveal reveal--fade-up">Scopri cosa dicono i nostri utenti sulla nostra societ√†</p>
                        <% if (isLoggedIn) { %>
                            <a href="/scrivi/recensione" class="btn btn-primary btn-lg px-4 py-2 reveal reveal--fade-up reveal--delay-1">
                                <i class="fas fa-edit me-2"></i>Scrivi una Recensione
                            </a>
                        <% } %>
                    </div>
                </div>
            </div>
        </section>

        <section class="container my-5">
            <% if (typeof error !== 'undefined' && error) { %>
                <div class="alert alert-danger" role="alert">
                    <%= error %>
                </div>
            <% } else { %>
                <div class="row">
                    <div class="col-md-4 mb-4">
                        <div class="card shadow-sm h-100 reveal reveal--fade-up">
                            <div class="card-body text-center">
                                <h2 class="card-title h4 mb-3">Valutazione Media</h2>
                                <div class="mb-3">
                                    <div class="display-4 fw-bold text-primary mb-2">
                                        <%= (typeof averageRating === 'number' && !isNaN(averageRating)) ? averageRating.toFixed(1) : 'N/A' %>
                                    </div>
                                    <div class="fs-3 text-warning" id="averageStars">
                                        <% if (typeof averageRating === 'number' && !isNaN(averageRating)) { 
                                            const fullStars = Math.floor(averageRating);
                                            const hasHalfStar = (averageRating % 1) >= 0.5;
                                            const emptyStars = 5 - fullStars - (hasHalfStar ? 1 : 0);
                                            
                                            for (let i = 0; i < fullStars; i++) { %>
                                                <i class="fas fa-star"></i>
                                            <% }
                                            
                                            if (hasHalfStar) { %>
                                                <i class="fas fa-star-half-alt"></i>
                                            <% }
                                            
                                            for (let i = 0; i < emptyStars; i++) { %>
                                                <i class="far fa-star"></i>
                                            <% }
                                        } else { %>
                                            <i class="far fa-star"></i><i class="far fa-star"></i><i class="far fa-star"></i><i class="far fa-star"></i><i class="far fa-star"></i>
                                        <% } %>
                                    </div>
                                </div>
                                <p class="text-muted mb-4">Basato su <%= totalReviews || 0 %> recensioni</p>
                                <div id="ratingBars">
                                    <% for (let i = 5; i >=1; i--) { %>
                                        <div class="rating-bar d-flex align-items-center mb-3">
                                            <span class="me-2 small"><%= i %> <i class="bi bi-star-fill text-warning"></i></span>
                                            <div class="progress flex-grow-1" style="height: 8px;">
                                                <div class="progress-bar bg-warning" role="progressbar" 
                                                     style="width:<%= ((typeof ratingCounts !== 'undefined' && ratingCounts[i]) ? (ratingCounts[i] / (totalReviews || 1) * 100) : 0).toFixed(2) %>%" 
                                                     aria-valuenow="<%= ((typeof ratingCounts !== 'undefined' && ratingCounts[i]) ? (ratingCounts[i] / (totalReviews || 1) * 100) : 0).toFixed(2) %>" 
                                                     aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                                            <span class="ms-2 small"><%= (typeof ratingCounts !== 'undefined' && ratingCounts[i]) ? ratingCounts[i] : 0 %></span>
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-8">
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <h3 class="h5 mb-0">Tutte le Recensioni</h3>
                            <div class="d-flex align-items-center">
                                <label for="filterStars" class="form-label me-2 mb-0 small">Filtra:</label>
                                <select class="form-select form-select-sm" id="filterStars" style="width: auto;">
                                    <option value="all">Tutte</option>
                                    <option value="5">5 stelle</option>
                                    <option value="4">4 stelle</option>
                                    <option value="3">3 stelle</option>
                                    <option value="2">2 stelle</option>
                                    <option value="1">1 stella</option>
                                </select>
                            </div>
                        </div>
                        <div id="reviewsContainer">
                            <!-- Le recensioni verranno caricate dinamicamente da recensioni.js -->
                        </div>
                        <div class="text-center mt-4">
                            <button id="loadMoreBtn" class="btn btn-outline-primary">Carica Altre Recensioni</button>
                        </div>
                    </div>
                </div>
            <% } %>
        </section>
    </main>

    <%- include('partials/footer') %>

    <!-- Scroll reveal animations -->
    <script src="/assets/scripts/scroll-reveal.js"></script>
</body>
</html>