<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= notizia.titolo %> - Borgo Vercelli</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.4/dist/css/bootstrap.min.css" rel="stylesheet">
    <%- include('../../shared/views/partials/theme-includes') %>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <%- include('../../shared/views/partials/theme-includes') %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/assets/styles/Navbar.css">
    <link rel="stylesheet" href="/assets/styles/Footer.css">
    <link rel="stylesheet" href="/assets/styles/Notizie.css">
    <link rel="stylesheet" href="/assets/styles/theme-notizie.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.4/dist/js/bootstrap.bundle.min.js">
    <%- include('../../shared/views/partials/theme-includes') %></script>
    <script src="/assets/scripts/visualizza_notizia.js" defer></script>
</head>
<body>
    <%- include('partials/navbar') %>

    <main class="container-fluid px-0 mb-3">
        <!-- Hero Section -->
        <div class="hero-section-notizia">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/">Home</a></li>
                                <li class="breadcrumb-item"><a href="/notizie/all">Notizie</a></li>
                                <li class="breadcrumb-item active" aria-current="page"><%= notizia.titolo %></li>
                            </ol>
                        </nav>
                        <h1 class="display-4 fw-bold text-primary reveal reveal--text-mask"><%= notizia.titolo %></h1>
                        <% if (notizia.sottotitolo) { %>
                            <p class="lead text-muted reveal reveal--fade-up reveal--delay-1"><%= notizia.sottotitolo %></p>
                        <% } %>
                        <div class="d-flex align-items-center mt-3 reveal reveal--fade-up reveal--delay-2 flex-wrap">
                            <i class="bi bi-person-circle me-2 text-primary"></i>
                            <span class="me-3"><%= notizia.autore || 'Autore sconosciuto' %></span>
                            <i class="bi bi-calendar-event me-2 text-primary"></i>
                            <span class="me-3"><%= notizia.data_pubblicazione ? new Date(notizia.data_pubblicazione).toLocaleDateString('it-IT', { year: 'numeric', month: 'long', day: 'numeric' }) : 'Non pubblicato' %></span>
                            <i class="bi bi-eye me-2 text-primary"></i>
                            <span><%= notizia.visualizzazioni || 0 %> visualizzazioni</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="main-content py-5">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-8">
                        <article class="notizia-article reveal reveal--fade-up reveal--delay-1">
                            <div class="notizia-immagine mb-4">
                                <img src="<%= (notizia.immagine_url && notizia.immagine_url.trim() !== '') ? notizia.immagine_url : (notizia.immagine && notizia.immagine.url ? notizia.immagine.url : '/assets/images/Campo.png') %>"
                                     alt="<%= notizia.titolo %>" class="img-fluid rounded shadow"
                                     onerror="this.onerror=null; this.src='/assets/images/Campo.png'; this.alt='';">
                            </div>
                            <div class="notizia-contenuto ql-editor">
                                <%- notizia.contenuto || '' %>
                            </div>
                        </article>

                        <!-- Social Share Buttons -->
                        <div class="social-share mt-5 pt-4 border-top">
                            <h5 class="mb-3">Condividi questa notizia</h5>
                            <div class="d-flex gap-2 flex-wrap">
                                <button class="btn btn-outline-primary btn-sm share-btn" data-platform="facebook">
                                    <i class="bi bi-facebook me-1"></i> Facebook
                                </button>
                                <button class="btn btn-outline-info btn-sm share-btn" data-platform="twitter">
                                    <i class="bi bi-twitter me-1"></i> Twitter
                                </button>
                                <button class="btn btn-outline-success btn-sm share-btn" data-platform="whatsapp">
                                    <i class="bi bi-whatsapp me-1"></i> WhatsApp
                                </button>
                                <button class="btn btn-outline-secondary btn-sm share-btn" data-platform="copy">
                                    <i class="bi bi-clipboard me-1"></i> Copia Link
                                </button>
                            </div>
                        </div>

                        <!-- Related News or Comments could go here -->
                    </div>
                </div>
            </div>
        </div>
    </main>

    <%- include('partials/footer') %>

    <!-- Scroll reveal animations -->
    <script src="/assets/scripts/scroll-reveal.js"></script>
</body>
</html>