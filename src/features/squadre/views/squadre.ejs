<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Squadre</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.4/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-DQvkBjpPgn7RC31MCQoOeC9TI2kdqa4+BSgNMNj8v77fdC77Kj5zpWFTJaaAoMbC" crossorigin="anonymous">
    <%- include('../../shared/views/partials/theme-includes') %>
    <link rel="stylesheet" href="/assets/styles/scroll-animations.css">
    <link rel="stylesheet" href="/assets/styles/Squadra.css">
    <link rel="stylesheet" href="/assets/styles/Navbar.css">
    <link rel="stylesheet" href="/assets/styles/Footer.css">
    <link rel="stylesheet" href="/assets/styles/theme-squadre.css">
</head>
<body>
    <%- include('partials/navbar') %>

    <% if (errorMessage) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>
            <%= errorMessage %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    <% } %>

    <div id="page">
        <header class="m-5">
            <div class="mb-5 select-container mx-auto reveal reveal--fade-up">
                <select class="form-select form-select-sm custom-select" aria-label="Select menu" id="squadreSelect">
                    <option value="" disabled selected>Seleziona la squadra...</option>
                    <% squadre.forEach(squadra => { %>
                        <option value="<%= squadra.id %>"><%= squadra.nome || squadra.nome_squadra || '' %></option>
                    <% }); %>
                </select>
                <select class="form-select form-select-sm custom-select mt-4" aria-label="Select menu" id="annoSelect">
                    <option value="" disabled selected>Seleziona l'anno...</option>
                    <% const anni = [...new Set(squadre.map(s => s.Anno))]; %>
                    <% anni.forEach(anno => { %>
                        <option value="<%= anno %>"><%= anno %></option>
                    <% }); %>
                </select>
            </div>
                    <div class="reveal reveal--text-mask reveal--delay-1">
                <h1 class="text-center mb-4 overflow-hidden" id="SquadraTitle"><%= squadre.length > 0 ? (squadre[0].nome || squadre[0].nome_squadra || 'Nessuna squadra selezionata') : 'Nessuna squadra selezionata' %></h1>
            </div>
            <div class="row reveal reveal--zoom-out reveal--delay-2">
                <div class="col-12 text-center img-container">
                    <img src="<%= squadre.length > 0 && squadre[0].id_immagine ? squadre[0].id_immagine : '/assets/images/Logo.png' %>" alt="<%= squadre.length > 0 ? squadre[0].nome : 'Logo' %>" class="img-fluid" onerror="this.onerror=null; this.src='/assets/images/Logo.png';">
                </div>
            </div>
        </header>
        <section>
            <div class="container mt-5">
                <h1 class="text-center mb-4 overflow-hidden reveal reveal--text-mask" id="rosterTitle">Roster</h1>
                    <!-- Sezione Dirigenti della squadra (riempita dal JS frontend se disponibile) -->
                    <div class="mb-4" id="teamManagersContainer" style="display:none;">
                        <h3 class="h4">Dirigenti</h3>
                        <div id="teamManagersList" class="row g-3"></div>
                    </div>
                <div class="row mb-3">
                    <div class="col-md-6 reveal reveal--fade-up reveal--delay-1">
                        <div class="modern-search-wrapper-inline">
                            <i class="fas fa-search search-icon-inline"></i>
                            <input type="text" class="modern-search-input-inline" placeholder="Cerca giocatore..." id="searchPlayer" autocomplete="off">
                            <button class="modern-search-btn-inline" type="button" id="searchButton" aria-label="Cerca">
                                <i class="fas fa-arrow-right"></i>
                            </button>
                        </div>
                        <div id="resultsContainer" class="mt-2"></div>
                    </div>
                </div>
                <div class="table-responsive reveal reveal--fade-up reveal--delay-2">
                    <table class="table table-soccer table-striped">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Foto</th>
                                <th scope="col">Nome</th>
                                <th scope="col">Cognome</th>
                                <th scope="col">Numero</th>
                                <th scope="col">Ruolo</th>
                                <th scope="col">Età</th>
                                <th scope="col">Piede</th>
                                <th scope="col">Nazionalità</th>
                            </tr>
                        </thead>
                        <tbody id="rosterTable">
                            <!-- I giocatori saranno inseriti qui dinamicamente -->
                        </tbody>
                    </table>
                </div>
            </div>
        </section>
    </div>
    <%- include('partials/footer') %>
    <script src="/assets/scripts/scroll-reveal.js"></script>
    <script type="module">
        import Squadra from '/assets/scripts/components/Squadre.js';
        
        new Squadra(document.getElementById('page'));
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.4/dist/js/bootstrap.bundle.min.js" integrity="sha384-YUe2LzesAfftltw+PEaao2tjU/QATaW/rOitAq67e0CT0Zi2VVRL0oC4+gAaeBKu" crossorigin="anonymous"></script>
    
</body>
</html>