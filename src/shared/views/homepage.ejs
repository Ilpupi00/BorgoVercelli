<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Homepage - Asd Borgo Vercelli 2022</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.4/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <%- include('partials/theme-includes') %>
    <link rel="stylesheet" href="/assets/styles/Navbar.css">
    <link rel="stylesheet" href="/assets/styles/Footer.css">
    <link rel="stylesheet" href="/assets/styles/Homepage.css">
    <link rel="stylesheet" href="/assets/styles/theme-homepage.css">
    <meta name="google-site-verification" content="oZZ_V_pg43nZ8dg1O608dc8OuoPxQalGeO1HZ2RRYe0" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.4/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <%- include('partials/navbar') %>

    <!-- Hero Section -->
    <main class="hero-section bg-gradient-primary text-white d-flex align-items-center min-vh-100">
        <div class="container-fluid px-4">
            <div class="row justify-content-center">
                <div class="col-12 col-md-8 col-lg-6 text-center">
                    <h1 class="display-1 fw-bold mb-4 animate__animated animate__fadeInDown">A.S.D. Borgo Vercelli 2022</h1>
                    <p class="lead fs-4 mb-5 animate__animated animate__fadeInUp animate__delay-1s">La società del futuro</p>
                </div>
            </div>
        </div>
        <div class="hero-overlay"></div>
    </main>
    

    <!-- Notizie Section -->
    <section id="notizie-section" class="py-5 bg-light">
        <div class="container-fluid px-4">
            <div class="row justify-content-center mb-5">
                <div class="col-12 col-md-8 text-center">
                    <h2 class="section-title display-4 fw-bold text-primary mb-3">Notizie</h2>
                    <p class="lead text-muted">Le ultime novità dalla nostra società</p>
                </div>
            </div>
            <div class="row g-4">
                <% notizie.slice(0, 3).forEach((notizia, index) => { %>
                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="news-card h-100 animate__animated animate__fadeInUp" style="--index: <%= index %>;">
                            <div class="card-img-container">
                                <% 
                                const notiziaImgSrc = (notizia.immagine_url && notizia.immagine_url.trim()) 
                                    ? notizia.immagine_url 
                                    : (notizia.immagine && notizia.immagine.url ? notizia.immagine.url : '/assets/images/Campo.png');
                                %>
                          <img src="<%= notiziaImgSrc %>" alt="<%= notizia.titolo || 'Notizia' %>" class="img-fluid"
                              onerror="this.onerror=null; this.src='/assets/images/Campo.png'; this.alt='';">
                            </div>
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title fw-bold"><%= notizia.titolo || 'Senza titolo' %></h5>
                                <% if (notizia.sottotitolo) { %>
                                    <h6 class="card-subtitle mb-3 text-muted"><%= notizia.sottotitolo %></h6>
                                <% } %>
                                <p class="card-text flex-grow-1"><%= ((notizia.contenuto || '').replace(/<[^>]*>/g, '')).substring(0, 150) %>...</p>
                                <p class="card-text">
                                    <small class="text-muted">
                                        <i class="fas fa-calendar-alt me-1"></i><%= notizia.data_pubblicazione ? new Date(notizia.data_pubblicazione).toLocaleDateString('it-IT') : '' %>
                                    </small>
                                </p>
                                <% const noticiaLink = (notizia.id || notizia.N_id) ? ('/notizia/' + (notizia.id || notizia.N_id)) : null; %>
                                <% if (noticiaLink) { %>
                                    <a href="<%= noticiaLink %>" class="card-button mt-auto">
                                        <i class="fas fa-arrow-right me-2"></i>Leggi di più
                                    </a>
                                <% } else { %>
                                    <button class="card-button mt-auto btn btn-secondary disabled" aria-disabled="true">
                                        <i class="fas fa-eye-slash me-2"></i>Dettagli non disponibili
                                    </button>
                                <% } %>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
            <div class="text-center mt-5">
                <a href="/notizie/all" class="btn btn-outline-primary btn-lg px-4 py-2">
                    <i class="fas fa-list me-2"></i>Vedi tutte le notizie
                </a>
            </div>
        </div>
    </section>

    <!-- Eventi Section -->
    <section id="eventi-section" class="py-5 bg-white">
        <div class="container-fluid px-4">
            <div class="row justify-content-center mb-5">
                <div class="col-12 col-md-8 text-center">
                    <h2 class="section-title display-4 fw-bold text-primary mb-3">Eventi</h2>
                    <p class="lead text-muted">Partecipa ai nostri eventi sportivi</p>
                </div>
            </div>
            <div class="row g-4">
                <% eventi.slice(0, 3).forEach((evento, index) => { %>
                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="news-card h-100 animate__animated animate__fadeInUp" style="--index: <%= index %>;">
                            <div class="card-img-container">
                                <% 
                                const eventoImgSrc = (evento.immagine_url && evento.immagine_url.trim()) 
                                    ? evento.immagine_url 
                                    : (evento.immagine && evento.immagine.url ? evento.immagine.url : '/assets/images/Campo.png');
                                %>
                          <img src="<%= eventoImgSrc %>" alt="<%= evento.titolo || 'Evento' %>" class="img-fluid"
                              onerror="this.onerror=null; this.src='/assets/images/Campo.png'; this.alt='';">
                            </div>
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title fw-bold"><%= evento.titolo || 'Senza titolo' %></h5>
                                <p class="card-text flex-grow-1"><%= ((evento.descrizione || '').replace(/<[^>]*>/g, '')).substring(0, 150) %>...</p>
                                <p class="card-text">
                                    <small class="text-muted">
                                        <i class="fas fa-calendar-alt me-1"></i><%= evento.data_inizio ? new Date(evento.data_inizio).toLocaleDateString('it-IT') : '' %>
                                    </small>
                                </p>
                                <% const eventoLink = (evento.id || evento.E_id) ? ('/evento/' + (evento.id || evento.E_id)) : null; %>
                                <% if (eventoLink) { %>
                                    <a href="<%= eventoLink %>" class="card-button mt-auto">
                                        <i class="fas fa-arrow-right me-2"></i>Scopri di più
                                    </a>
                                <% } else { %>
                                    <button class="card-button mt-auto btn btn-secondary disabled" aria-disabled="true">
                                        <i class="fas fa-eye-slash me-2"></i>Dettagli non disponibili
                                    </button>
                                <% } %>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
            <div class="text-center mt-5">
                <a href="/eventi" class="btn btn-outline-primary btn-lg px-4 py-2">
                    <i class="fas fa-calendar me-2"></i>Vedi tutti gli eventi
                </a>
            </div>
        </div>
    </section>

    <!-- Recensioni Section -->
    <section id="recensioni-section" class="py-5 bg-light">
        <div class="container-fluid px-4">
            <div class="row justify-content-center mb-5">
                <div class="col-12 col-md-8 text-center">
                    <h2 class="section-title display-4 fw-bold text-primary mb-3">Recensioni</h2>
                    <p class="lead text-muted">Cosa dicono i nostri utenti</p>
                </div>
            </div>
            <div class="row g-4">
                <% recensioni.slice(0, 6).forEach((recensione, index) => { %>
                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="review-card h-100 animate__animated animate__fadeInUp" style="--index: <%= index %>;">
                            <div class="review-content">
                                <div class="review-stars mb-3">
                                    <% for (let i = 1; i <= 5; i++) { %>
                                        <i class="<%= i <= recensione.valutazione ? 'fas' : 'far' %> fa-star text-warning"></i>
                                    <% } %>
                                </div>
                                <p class="review-text mb-4">"<%= recensione.contenuto %>"</p>
                                <div class="reviewer-info d-flex align-items-center">
                                    <% if (recensione.immagine_utente && String(recensione.immagine_utente).trim()) { %>
                                        <img src="<%= recensione.immagine_utente %>" alt="<%= recensione.nome_utente %> <%= recensione.cognome_utente %>" class="reviewer-image rounded-circle me-3" onerror="this.onerror=null; this.src='/assets/images/Campo.png';">
                                    <% } else { %>
                                        <div class="reviewer-icon rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="28" height="28" fill="currentColor" class="bi bi-person-circle" viewBox="0 0 16 16" aria-hidden="true" focusable="false">
                                                <path d="M11 5a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
                                                <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 1 0 0 14A7 7 0 0 0 8 1z"/>
                                                <path d="M8 9a4 4 0 0 0-4 4v.5a.5.5 0 0 0 .5.5h7a.5.5 0 0 0 .5-.5V13a4 4 0 0 0-4-4z"/>
                                            </svg>
                                        </div>
                                    <% } %>
                                    <div>
                                        <p class="reviewer-name fw-bold mb-0"><%= recensione.nome_utente %> <%= recensione.cognome_utente %></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
            <div class="text-center mt-5">
                <a href="/recensioni/all" class="btn btn-outline-primary btn-lg px-4 py-2 me-3">
                    <i class="fas fa-star me-2"></i>Vedi tutte le recensioni
                </a>
                <a href="/scrivi/recensione" id="scrivi-recensione-link" class="btn btn-outline-primary btn-lg px-4 py-2">
                    <i class="fas fa-edit me-2"></i>Scrivi una recensione
                </a>
            </div>
        </div>
    </section>

    <%- include('partials/footer') %>

    <script type="module">
        import Homepage from '/assets/scripts/components/Homepage.js';
        
        new Homepage(document.body);
    </script>
</body>
</html>