<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Homepage - Asd BorgoVercelli 2022</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.4/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/assets/styles/Navbar.css">
    <link rel="stylesheet" href="/assets/styles/Footer.css">
    <link rel="stylesheet" href="/assets/styles/Homepage.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.4/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <%- include('partials/navbar') %>

    <!-- Hero Section -->
    <main class="hero-section bg-gradient-primary text-white d-flex align-items-center min-vh-100">
        <div class="container-fluid px-4">
            <div class="row justify-content-center">
                <div class="col-12 col-md-8 col-lg-6 text-center">
                    <h1 class="display-1 fw-bold mb-4 animate__animated animate__fadeInDown">Asd BorgoVercelli 2022</h1>
                    <p class="lead fs-4 mb-5 animate__animated animate__fadeInUp animate__delay-1s">La società del futuro</p>
                </div>
            </div>
        </div>
        <div class="hero-overlay"></div>
    </main>
    

    <!-- Notizie Section -->
    <section id="notizie-section" class="py-5 bg-light">
        <div class="container-fluid px-4">
            <div class="row justify-content-center mb-5">
                <div class="col-12 col-md-8 text-center">
                    <h2 class="section-title display-4 fw-bold text-primary mb-3">Notizie</h2>
                    <p class="lead text-muted">Le ultime novità dalla nostra società</p>
                </div>
            </div>
            <div class="row g-4">
                <% notizie.slice(0, 3).forEach((notizia, index) => { %>
                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="news-card h-100 animate__animated animate__fadeInUp" style="--index: <%= index %>;">
                            <div class="card-img-container">
                                <img src="<%= notizia.immagine_url || '/assets/images/Campo.png' %>" alt="<%= notizia.titolo %>" class="img-fluid">
                            </div>
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title fw-bold"><%= notizia.titolo %></h5>
                                <% if (notizia.sottotitolo) { %>
                                    <h6 class="card-subtitle mb-3 text-muted"><%= notizia.sottotitolo %></h6>
                                <% } %>
                                <p class="card-text flex-grow-1"><%= notizia.contenuto.substring(0, 150) %>...</p>
                                <p class="card-text">
                                    <small class="text-muted">
                                        <i class="fas fa-calendar-alt me-1"></i><%= new Date(notizia.data_pubblicazione).toLocaleDateString('it-IT') %>
                                    </small>
                                </p>
                                <a href="/notizia/<%= notizia.id || notizia.N_id %>" class="card-button mt-auto">
                                    <i class="fas fa-arrow-right me-2"></i>Leggi di più
                                </a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
            <div class="text-center mt-5">
                <a href="/notizie/all" class="btn btn-outline-primary btn-lg px-4 py-2">
                    <i class="fas fa-list me-2"></i>Vedi tutte le notizie
                </a>
            </div>
        </div>
    </section>

    <!-- Eventi Section -->
    <section id="eventi-section" class="py-5 bg-white">
        <div class="container-fluid px-4">
            <div class="row justify-content-center mb-5">
                <div class="col-12 col-md-8 text-center">
                    <h2 class="section-title display-4 fw-bold text-primary mb-3">Eventi</h2>
                    <p class="lead text-muted">Partecipa ai nostri eventi sportivi</p>
                </div>
            </div>
            <div class="row g-4">
                <% eventi.slice(0, 3).forEach((evento, index) => { %>
                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="news-card h-100 animate__animated animate__fadeInUp" style="--index: <%= index %>;">
                            <div class="card-img-container">
                                <img src="<%= evento.immagine_url || '/assets/images/Campo.png' %>" alt="<%= evento.titolo %>" class="img-fluid">
                            </div>
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title fw-bold"><%= evento.titolo %></h5>
                                <p class="card-text flex-grow-1"><%= evento.descrizione.substring(0, 150) %>...</p>
                                <p class="card-text">
                                    <small class="text-muted">
                                        <i class="fas fa-calendar-alt me-1"></i><%= new Date(evento.data_inizio).toLocaleDateString('it-IT') %>
                                    </small>
                                </p>
                                <a href="/evento/<%= evento.id %>" class="card-button mt-auto">
                                    <i class="fas fa-arrow-right me-2"></i>Scopri di più
                                </a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
            <div class="text-center mt-5">
                <a href="/eventi" class="btn btn-outline-primary btn-lg px-4 py-2">
                    <i class="fas fa-calendar me-2"></i>Vedi tutti gli eventi
                </a>
            </div>
        </div>
    </section>

    <!-- Recensioni Section -->
    <section id="recensioni-section" class="py-5 bg-light">
        <div class="container-fluid px-4">
            <div class="row justify-content-center mb-5">
                <div class="col-12 col-md-8 text-center">
                    <h2 class="section-title display-4 fw-bold text-primary mb-3">Recensioni</h2>
                    <p class="lead text-muted">Cosa dicono i nostri utenti</p>
                </div>
            </div>
            <div class="row g-4">
                <% recensioni.slice(0, 6).forEach((recensione, index) => { %>
                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="review-card h-100 animate__animated animate__fadeInUp" style="--index: <%= index %>;">
                            <div class="review-content">
                                <div class="review-stars mb-3">
                                    <% for (let i = 1; i <= 5; i++) { %>
                                        <i class="<%= i <= recensione.valutazione ? 'fas' : 'far' %> fa-star text-warning"></i>
                                    <% } %>
                                </div>
                                <p class="review-text mb-4">"<%= recensione.contenuto %>"</p>
                                <div class="reviewer-info d-flex align-items-center">
                                    <% if (recensione.immagine_utente) { %>
                                        <img src="<%= recensione.immagine_utente %>" alt="<%= recensione.nome_utente %> <%= recensione.cognome_utente %>" class="reviewer-image rounded-circle me-3">
                                    <% } else { %>
                                        <div class="reviewer-icon bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                                            <i class="fas fa-user"></i>
                                        </div>
                                    <% } %>
                                    <div>
                                        <p class="reviewer-name fw-bold mb-0"><%= recensione.nome_utente %> <%= recensione.cognome_utente %></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
            <div class="text-center mt-5">
                <a href="/recensioni/all" class="btn btn-outline-primary btn-lg px-4 py-2 me-3">
                    <i class="fas fa-star me-2"></i>Vedi tutte le recensioni
                </a>
                <a href="/scrivi/recensione" id="scrivi-recensione-link" class="btn btn-outline-primary btn-lg px-4 py-2">
                    <i class="fas fa-edit me-2"></i>Scrivi una recensione
                </a>
            </div>
        </div>
    </section>

    <%- include('partials/footer') %>

    <script type="module">
        import Homepage from '/assets/scripts/components/Homepage.js';
        
        new Homepage(document.body);
    </script>
</body>
</html>