<!DOCTYPE html>
<html lang="it">
<head>
<meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Contatti - Asd BorgoVercelli 2022</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.4/dist/css/bootstrap.min.css" rel="stylesheet">
    <%- include('../../shared/views/partials/theme-includes') %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/assets/styles/Navbar.css">
    <link rel="stylesheet" href="/assets/styles/Footer.css">
    <link rel="stylesheet" href="/assets/styles/Contatti.css">
    <link rel="stylesheet" href="/assets/styles/theme-contatti.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.4/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    <%- include('partials/navbar') %>

    <!-- Hero Section -->
    <main class="hero-section bg-gradient-primary text-white d-flex align-items-center">
        <div class="container-fluid px-4 py-5">
            <div class="row justify-content-center">
                <div class="col-12 col-md-8 col-lg-6 text-center">
                    <h1 class="display-4 fw-bold mb-4 animate__animated animate__fadeInDown">Contattaci</h1>
                    <p class="lead fs-5 mb-5 animate__animated animate__fadeInUp animate__delay-1s">Siamo qui per rispondere alle tue domande</p>
                </div>
            </div>
        </div>
        
    </main>

    <!-- Contact Info Section -->
    <section class="contact-info-section py-5 bg-light">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-md-10 col-lg-8">
                    <h2 class="text-center mb-5 text-primary">I nostri contatti</h2>
                    <div class="row g-4">
                        <div class="col-md-4">
                            <div class="contact-info-card text-center p-4 h-100 bg-white rounded shadow-sm">
                                <div class="icon-wrapper mb-3">
                                    <i class="fas fa-phone fa-2x text-primary"></i>
                                </div>
                                <h5 class="fw-bold mb-2">Telefono</h5>
                                <p class="mb-0">
                                    <a href="tel:+393520380073" class="text-decoration-none text-dark">+39 352 0380073</a>
                                </p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="contact-info-card text-center p-4 h-100 bg-white rounded shadow-sm">
                                <div class="icon-wrapper mb-3">
                                    <i class="fas fa-envelope fa-2x text-primary"></i>
                                </div>
                                <h5 class="fw-bold mb-2">Email</h5>
                                <p class="mb-0" style="word-break: break-word; overflow-wrap: break-word;">
                                    <a href="mailto:info.asdborgovercelli2022@gmail.com" class="text-decoration-none text-dark" style="font-size: 0.85rem;">info.asdborgovercelli2022@gmail.com</a>
                                </p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="contact-info-card text-center p-4 h-100 bg-white rounded shadow-sm">
                                <div class="icon-wrapper mb-3">
                                    <i class="fas fa-map-marker-alt fa-2x text-primary"></i>
                                </div>
                                <h5 class="fw-bold mb-2">Sede</h5>
                                <p class="mb-0">Via Repubblica<br>13012 Borgo Vercelli VC</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact Form Section -->
    <section class="contact-section py-5">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-md-8 col-lg-6">
                    <div class="contact-card shadow-lg p-4 animate__animated animate__fadeInUp">
                        <h2 class="text-center mb-4 text-primary">Invia un messaggio</h2>
                        <form id="contactForm">
                            <div class="mb-4">
                                <label for="name" class="form-label">
                                    <i class="fas fa-user me-2 text-primary"></i>Nome *
                                </label>
                                <input type="text" class="form-control" id="name" name="name" required placeholder="Il tuo nome completo">
                                <div class="invalid-feedback">Il nome è obbligatorio.</div>
                            </div>
                            <div class="mb-4">
                                <label for="email" class="form-label">
                                    <i class="fas fa-envelope me-2 text-primary"></i>Email *
                                </label>
                                <input type="email" class="form-control" id="email" name="email" required placeholder="tua@email.com">
                                <div class="invalid-feedback">Inserisci un indirizzo email valido.</div>
                            </div>
                            <div class="mb-4">
                                <label for="phone" class="form-label">
                                    <i class="fas fa-phone me-2 text-primary"></i>Telefono
                                </label>
                                <input type="tel" class="form-control" id="phone" name="phone" placeholder="+39 123 456 7890">
                            </div>
                            <div class="mb-4">
                                <label for="subject" class="form-label">
                                    <i class="fas fa-tag me-2 text-primary"></i>Oggetto *
                                </label>
                                <input type="text" class="form-control" id="subject" name="subject" required placeholder="Oggetto del messaggio">
                                <div class="invalid-feedback">L'oggetto è obbligatorio.</div>
                            </div>
                            <div class="mb-4">
                                <label for="message" class="form-label">
                                    <i class="fas fa-comment me-2 text-primary"></i>Messaggio *
                                </label>
                                <textarea class="form-control" id="message" name="message" rows="5" required placeholder="Scrivi il tuo messaggio qui..."></textarea>
                                <div class="invalid-feedback">Il messaggio è obbligatorio.</div>
                            </div>
                            <div class="mb-4 form-check">
                                <input class="form-check-input" type="checkbox" id="privacy_accept" name="privacy_accept" required>
                                <label class="form-check-label" for="privacy_accept">
                                    <span class="text-danger">*</span> Accetto la <a href="/privacy" target="_blank" class="text-decoration-underline">Privacy Policy</a> e il <a href="/regolamento" target="_blank" class="text-decoration-underline">Regolamento</a>
                                </label>
                            </div>
                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary btn-lg" id="submitBtn">
                                    <i class="fas fa-paper-plane me-2"></i>Invia Messaggio
                                </button>
                            </div>
                        </form>
                        <div id="feedback" class="mt-3 d-none"></div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <%- include('partials/footer') %>

    <script src="/assets/scripts/contatti.js" defer></script>
</body>
</html>