<script>
  // Ensure dropdown visual state resets when the menu is closed
  (function () {
    if (typeof bootstrap === 'undefined') return;
    document.querySelectorAll('.navbar .dropdown').forEach(function (dd) {
      dd.addEventListener('hidden.bs.dropdown', function (e) {
        // Remove focus from toggle button
        var toggle = dd.querySelector('[data-bs-toggle="dropdown"]');
        if (toggle && typeof toggle.blur === 'function') toggle.blur();
        // Remove focus/active classes from dropdown items
        dd.querySelectorAll('.dropdown-item').forEach(function (it) {
          it.classList.remove('active');
          if (it.blur) it.blur();
        });
      });
    });
  })();
</script>