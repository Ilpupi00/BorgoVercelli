<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Statistiche - Admin</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.4/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="/javascripts/components/StatisticheManager.js" defer></script>
    <script src="/javascripts/components/StatistichePage.js" defer></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.4/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/stylesheets/Admin.css">
    <script src="/javascripts/components/Admin.js" defer></script>
</head>
<body>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <%- include('../../partials/sidebar.ejs'); %>

            <!-- Contenuto principale -->
            <div class="col-lg-9 col-xl-10 px-4 py-5">
                <div class="row justify-content-center">
                    <div class="col-12">

                        <!-- Header con profilo -->
                        <div class="admin-header animate__animated animate__fadeInDown mb-4">
                            <div class="row align-items-center">
                                <div class="col-md-8 text-center text-md-start">
                                    <h1 class="display-5 fw-bold text-dark mb-2">
                                        <i class="bi bi-bar-chart-fill text-primary me-2"></i>
                                        Statistiche del Sistema
                                    </h1>
                                    <p class="text-primary fw-semibold mb-0">Amministratore del Sistema</p>
                                </div>
                                <div class="col-md-4 text-center text-md-end mt-3 mt-md-0 d-flex justify-content-center justify-content-md-end">
                                    <div class="d-flex flex-column flex-sm-row justify-content-center justify-content-md-end gap-2 w-100">
                                        <button type="button" class="btn btn-success btn-modern flex-fill flex-md-auto" style="max-width: 120px;" onclick="statistichePage.exportData()">
                                            <i class="bi bi-download"></i> <span class="d-none d-sm-inline">Esporta</span>
                                        </button>
                                        <a href="/admin" class="btn btn-outline-secondary btn-modern flex-fill flex-md-auto" style="max-width: 140px;">
                                            <i class="bi bi-arrow-left"></i> <span class="d-none d-sm-inline">Pannello</span>
                                        </a>
                                        <a href="/Logout" class="btn btn-outline-danger btn-modern flex-fill flex-md-auto" style="max-width: 100px;">
                                            <i class="bi bi-box-arrow-right"></i> <span class="d-none d-sm-inline">Esci</span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Contenuto principale -->
                        <div class="admin-content animate__animated animate__fadeInUp animate__delay-1s">
                            <div class="row mb-4">
                                <div class="col-12">
                                    <h2 class="mb-4">
                                        <i class="bi bi-graph-up text-primary me-2"></i>
                                        Panoramica Generale
                                    </h2>
                                </div>
                            </div>

                            <!-- Cards statistiche -->
                            <div class="row mb-4">
                                <div class="col-md-3 mb-3">
                                    <div class="card stat-card animate__animated animate__fadeInUp">
                                        <div class="card-body text-center">
                                            <i class="bi bi-people-fill display-4 text-primary mb-3"></i>
                                            <h3 class="card-title">Utenti Totali</h3>
                                            <p class="card-text display-6 fw-bold text-primary">
                                                <% if (statistiche && statistiche.utentiTotali !== undefined) { %>
                                                    <%= statistiche.utentiTotali %>
                                                <% } else { %>
                                                    <span class="text-muted">Da implementare</span>
                                                <% } %>
                                            </p>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-3 mb-3">
                                    <div class="card stat-card animate__animated animate__fadeInUp animate__delay-1s">
                                        <div class="card-body text-center">
                                            <i class="bi bi-newspaper display-4 text-success mb-3"></i>
                                            <h3 class="card-title">Notizie Pubblicate</h3>
                                            <p class="card-text display-6 fw-bold text-success">
                                                <% if (statistiche && statistiche.notiziePubblicate !== undefined) { %>
                                                    <%= statistiche.notiziePubblicate %>
                                                <% } else { %>
                                                    <span class="text-muted">Da implementare</span>
                                                <% } %>
                                            </p>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-3 mb-3">
                                    <div class="card stat-card animate__animated animate__fadeInUp animate__delay-2s">
                                        <div class="card-body text-center">
                                            <i class="bi bi-calendar-event-fill display-4 text-warning mb-3"></i>
                                            <h3 class="card-title">Eventi Attivi</h3>
                                            <p class="card-text display-6 fw-bold text-warning">
                                                <% if (statistiche && statistiche.eventiAttivi !== undefined) { %>
                                                    <%= statistiche.eventiAttivi %>
                                                <% } else { %>
                                                    <span class="text-muted">Da implementare</span>
                                                <% } %>
                                            </p>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-3 mb-3">
                                    <div class="card stat-card animate__animated animate__fadeInUp animate__delay-3s">
                                        <div class="card-body text-center">
                                            <i class="bi bi-calendar-check-fill display-4 text-info mb-3"></i>
                                            <h3 class="card-title">Prenotazioni Attive</h3>
                                            <p class="card-text display-6 fw-bold text-info">
                                                <% if (statistiche && statistiche.prenotazioniAttive !== undefined) { %>
                                                    <%= statistiche.prenotazioniAttive %>
                                                <% } else { %>
                                                    <span class="text-muted">Da implementare</span>
                                                <% } %>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Sezione grafici e dettagli -->
                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="card">
                                        <div class="card-header">
                                            <h5 class="card-title mb-0">
                                                <i class="bi bi-bar-chart text-primary me-2"></i>
                                                Attivit√† Recenti
                                            </h5>
                                        </div>
                                        <div class="card-body">
                                            <canvas id="activityChart" style="max-height: 300px;"></canvas>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-6 mb-4">
                                    <div class="card">
                                        <div class="card-header">
                                            <h5 class="card-title mb-0">
                                                <i class="bi bi-pie-chart text-primary me-2"></i>
                                                Distribuzione Utenti
                                            </h5>
                                        </div>
                                        <div class="card-body">
                                            <canvas id="userDistributionChart" style="max-height: 300px;"></canvas>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Grafico tendenze -->
                            <div class="row mb-4">
                                <div class="col-12">
                                    <div class="card">
                                        <div class="card-header">
                                            <h5 class="card-title mb-0">
                                                <i class="bi bi-graph-up text-primary me-2"></i>
                                                Tendenze Mensili
                                            </h5>
                                        </div>
                                        <div class="card-body">
                                            <canvas id="trendsChart" style="max-height: 400px;"></canvas>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Tabella riepilogativa -->
                            <div class="row">
                                <div class="col-12">
                                    <div class="card">
                                        <div class="card-header">
                                            <h5 class="card-title mb-0">
                                                <i class="bi bi-table text-primary me-2"></i>
                                                Riepilogo Dettagliato
                                            </h5>
                                        </div>
                                        <div class="card-body">
                                            <div class="table-responsive">
                                                <table class="table table-hover">
                                                    <thead class="table-dark">
                                                        <tr>
                                                            <th>Metrica</th>
                                                            <th>Valore</th>
                                                            <th>Variazione</th>
                                                            <th>Periodo</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <tr>
                                                            <td>Utenti Registrati</td>
                                                            <td>
                                                                <% if (statistiche && statistiche.utentiTotali !== undefined) { %>
                                                                    <%= statistiche.utentiTotali %>
                                                                <% } else { %>
                                                                    <span class="text-muted">N/D</span>
                                                                <% } %>
                                                            </td>
                                                            <td><span class="badge bg-success">+5%</span></td>
                                                            <td>Questo mese</td>
                                                        </tr>
                                                        <tr>
                                                            <td>Notizie Pubblicate</td>
                                                            <td>
                                                                <% if (statistiche && statistiche.notiziePubblicate !== undefined) { %>
                                                                    <%= statistiche.notiziePubblicate %>
                                                                <% } else { %>
                                                                    <span class="text-muted">N/D</span>
                                                                <% } %>
                                                            </td>
                                                            <td><span class="badge bg-success">+12%</span></td>
                                                            <td>Questo mese</td>
                                                        </tr>
                                                        <tr>
                                                            <td>Eventi Organizzati</td>
                                                            <td>
                                                                <% if (statistiche && statistiche.eventiAttivi !== undefined) { %>
                                                                    <%= statistiche.eventiAttivi %>
                                                                <% } else { %>
                                                                    <span class="text-muted">N/D</span>
                                                                <% } %>
                                                            </td>
                                                            <td><span class="badge bg-warning">-2%</span></td>
                                                            <td>Questo mese</td>
                                                        </tr>
                                                        <tr>
                                                            <td>Prenotazioni Campo</td>
                                                            <td>
                                                                <% if (statistiche && statistiche.prenotazioniAttive !== undefined) { %>
                                                                    <%= statistiche.prenotazioniAttive %>
                                                                <% } else { %>
                                                                    <span class="text-muted">N/D</span>
                                                                <% } %>
                                                            </td>
                                                            <td><span class="badge bg-success">+8%</span></td>
                                                            <td>Questa settimana</td>
                                                        </tr>
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="page"></div>

    <script>
        // Passa i dati delle statistiche al JavaScript
        window.statisticheData = <%- JSON.stringify(statistiche) %>;
    </script>
</body>
</html>
