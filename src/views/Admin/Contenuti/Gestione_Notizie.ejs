<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestione Notizie - Admin</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.4/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
    <script src="/javascripts/components/Admin.js" defer></script>
    <script src="/javascripts/components/GestioneNotizie.js" defer></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.4/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/stylesheets/Admin.css">
</head>
<body>

    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <%- include('../../partials/sidebar.ejs'); %>

            <!-- Contenuto principale -->
            <div class="col-lg-9 col-xl-10 px-4 py-5">
                <div class="row justify-content-center">
                    <div class="col-12">

                        <!-- Header con profilo -->
                        <div class="admin-header animate__animated animate__fadeInDown mb-4">
                            <div class="row align-items-center">
                                <div class="col-md-6 text-center text-md-start">
                                    <h1 class="display-5 fw-bold text-dark mb-2">
                                        <i class="bi bi-newspaper text-primary me-2"></i>
                                        Gestione Notizie
                                    </h1>
                                    <p class="text-primary fw-semibold mb-0">Amministratore del Sistema</p>
                                </div>
                                <div class="col-md-4 text-center text-md-end mt-3 mt-md-0 d-flex justify-content-center justify-content-md-end">
                                    <a href="/admin" class="btn btn-outline-secondary btn-modern me-2 flex-fill flex-md-auto" style="max-width: 140px;">
                                        <i class="bi bi-arrow-left"></i> <span class="d-none d-sm-inline">Pannello</span>
                                    </a>
                                    <a href="/Logout" class="btn btn-outline-danger btn-modern flex-fill flex-md-auto" style="max-width: 100px;">
                                        <i class="bi bi-box-arrow-right"></i> <span class="d-none d-sm-inline">Esci</span>
                                    </a>
                                </div>
                            </div>
                        </div>

                        <!-- Contenuto principale -->
                        <div class="admin-content animate__animated animate__fadeInUp animate__delay-1s">
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <h2 class="mb-0">
                                    <i class="bi bi-list-ul text-primary me-2"></i>
                                    Tutte le Notizie
                                </h2>
                                <a href="/crea-notizie" class="btn btn-primary btn-modern">
                                    <i class="bi bi-plus-circle me-2"></i>
                                    Crea Notizia
                                </a>
                            </div>

                            <!-- Barra di ricerca e filtri -->
                            <div class="card mb-4">
                                <div class="card-body">
                                    <div class="row g-3">
                                        <!-- Barra di ricerca -->
                                        <div class="col-md-6">
                                            <div class="input-group">
                                                <span class="input-group-text">
                                                    <i class="bi bi-search"></i>
                                                </span>
                                                <input type="text" class="form-control" id="searchInput" name="q" placeholder="Cerca per ID, titolo, contenuto...">
                                                <button class="btn btn-outline-secondary" type="button" id="clearSearch">
                                                    <i class="bi bi-x"></i>
                                                </button>
                                            </div>
                                        </div>
                                        
                                        <!-- Filtro stato -->
                                        <div class="col-md-3">
                                            <select class="form-select" id="statusFilter">
                                                <option value="all">Tutti gli stati</option>
                                                <option value="published">Pubblicate</option>
                                                <option value="draft">Bozze</option>
                                            </select>
                                        </div>
                                        
                                        <!-- Filtro data -->
                                        <div class="col-md-3">
                                            <select class="form-select" id="dateFilter">
                                                <option value="all">Tutte le date</option>
                                                <option value="today">Oggi</option>
                                                <option value="week">Questa settimana</option>
                                                <option value="month">Questo mese</option>
                                                <option value="year">Quest'anno</option>
                                            </select>
                                        </div>
                                    </div>
                                    
                                    <!-- Statistiche filtrate -->
                                    <div class="row mt-3">
                                        <div class="col-12">
                                            <small class="text-muted">
                                                <span id="totalCount"><%= notizie ? notizie.length : 0 %></span> notizie totali
                                                <span id="filteredCount" class="ms-3">(<%= notizie ? notizie.length : 0 %> filtrate)</span>
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="card">
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-hover">
                                            <thead class="table-dark">
                                                <tr>
                                                    <th>ID</th>
                                                    <th>Titolo</th>
                                                    <th>Autore</th>
                                                    <th>Data Pubblicazione</th>
                                                    <th>Stato</th>
                                                    <th>Visualizzazioni</th>
                                                    <th>Azioni</th>
                                                </tr>
                                            </thead>
                                            <tbody id="notizieTableBody">
                                                <% if (notizie && notizie.length > 0) { %>
                                                    <% notizie.forEach(notizia => { %>
                                                        <tr data-notizia-id="<%= notizia.id %>" 
                                                            data-titolo="<%= notizia.titolo.toLowerCase() %>"
                                                            data-contenuto="<%= (notizia.contenuto || '').toLowerCase() %>"
                                                            data-stato="<%= notizia.pubblicata ? 'published' : 'draft' %>"
                                                            data-data="<%= notizia.data_pubblicazione ? new Date(notizia.data_pubblicazione).toISOString().split('T')[0] : '' %>">
                                                            <td><%= notizia.id %></td>
                                                            <td>
                                                                <strong><%= notizia.titolo %></strong>
                                                                <% if (notizia.sottotitolo) { %>
                                                                    <br><small class="text-muted"><%= notizia.sottotitolo %></small>
                                                                <% } %>
                                                            </td>
                                                            <td><%= notizia.autore_nome %> <%= notizia.autore_cognome %></td>
                                                            <td><%= notizia.data_pubblicazione ? new Date(notizia.data_pubblicazione).toLocaleDateString('it-IT') : 'Non pubblicata' %></td>
                                                            <td>
                                                                <% if (notizia.pubblicata) { %>
                                                                    <span class="badge bg-success">Pubblicata</span>
                                                                <% } else { %>
                                                                    <span class="badge bg-warning">Bozza</span>
                                                                <% } %>
                                                            </td>
                                                            <td><%= notizia.visualizzazioni || 0 %></td>
                                                            <td>
                                                                <div class="btn-group" role="group">
                                                                    <a href="/notizia/<%= notizia.id %>" class="btn btn-sm btn-outline-primary" title="Visualizza">
                                                                        <i class="bi bi-eye"></i>
                                                                    </a>
                                                                    <button class="btn btn-sm btn-outline-warning" title="Modifica" onclick="modificaNotizia('<%= notizia.id %>')">
                                                                        <i class="bi bi-pencil"></i>
                                                                    </button>
                                                                    <button class="btn btn-sm btn-outline-danger" title="Elimina" onclick="eliminaNotizia('<%= notizia.id %>')">
                                                                        <i class="bi bi-trash"></i>
                                                                    </button>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                    <% }); %>
                                                    <!-- Riga per nessun risultato dai filtri (inizialmente nascosta) -->
                                                    <tr id="noResultsRow" style="display: none;">
                                                        <td colspan="7" class="text-center text-muted py-4">
                                                            <i class="bi bi-search display-4 mb-3"></i>
                                                            <p>Nessuna notizia corrisponde ai filtri selezionati.</p>
                                                            <button class="btn btn-outline-secondary" onclick="clearAllFilters()">Rimuovi filtri</button>
                                                        </td>
                                                    </tr>
                                                <% } else { %>
                                                    <tr id="noResultsRow">
                                                        <td colspan="7" class="text-center text-muted py-4">
                                                            <i class="bi bi-info-circle display-4 mb-3"></i>
                                                            <p>Nessuna notizia presente nel sistema.</p>
                                                            <a href="/crea-notizie" class="btn btn-primary">Crea la prima notizia</a>
                                                        </td>
                                                    </tr>
                                                <% } %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="page"></div>

</body>
</html>
