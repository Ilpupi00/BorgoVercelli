<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestione Campi - Admin</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.4/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/Admin.css">
    <link rel="stylesheet" href="/stylesheets/Admin_Global.css">
    <link rel="stylesheet" href="/stylesheets/Gestione_Campi.css">
</head>
<body>

    <div class="container-fluid">
        <div class="row">

            <!-- Sidebar -->
            <%- include('../../partials/sidebar.ejs'); %>

            <!-- Contenuto principale -->
            <main class="col-lg-9 col-xl-10 px-4 py-5">
                <div class="admin-container">
                    <header class="admin-page-header slide-up">
                        <div class="admin-page-header-content">
                            <h1><i class="bi bi-geo-alt-fill"></i> Gestione Campi</h1>
                            <p class="admin-page-subtitle">Gestisci campi sportivi e orari disponibilità</p>
                        </div>
                        <div class="admin-page-header-actions">
                            <a href="/admin" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-2"></i><span class="d-none d-sm-inline">Pannello</span>
                            </a>
                            <a href="/Logout" class="btn btn-outline-danger">
                                <i class="bi bi-box-arrow-right me-2"></i><span class="d-none d-sm-inline">Esci</span>
                            </a>
                        </div>
                    </header>

                    <section class="section-header fade-in">
                        <h2 class="section-title mb-0"><i class="bi bi-list-ul me-2"></i>Tutti i Campi</h2>
                        <button class="btn btn-success" onclick="showAddCampoModal()">
                            <i class="bi bi-plus-circle me-2"></i>Aggiungi Campo
                        </button>
                    </section>

                    <section class="admin-content-section fade-in">
                        <div class="admin-table-container">
                            <div class="table-responsive">
                                <table class="admin-table">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Nome</th>
                                            <th>Indirizzo</th>
                                            <th>Tipo Superficie</th>
                                            <th class="text-center">Stato</th>
                                            <th class="text-center">Azioni</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                                <% if (campi && campi.length > 0) { %>
                                                <% campi.forEach(function(campo) { %>
                                                        <tr data-campo-id="<%= campo.id %>">
                                                            <td><%= campo.id %></td>
                                                            <td><%= campo.nome %></td>
                                                            <td><%= campo.indirizzo %></td>
                                                            <td><%= campo.tipo_superficie %></td>
                                                            <td>
                                                                <% if (campo.attivo) { %>
                                                                    <span class="badge bg-success">Attivo</span>
                                                                <% } else { %>
                                                                    <span class="badge bg-danger">Inattivo</span>
                                                                <% } %>
                                                            </td>
                                                            <td>
                                                                <div class="btn-group" role="group">
                                                                    <a href="/admin/campi/<%= campo.id %>/orari" class="btn btn-sm btn-outline-primary">
                                                                        <i class="bi bi-clock"></i> Gestisci Orari
                                                                    </a>
                                                                    <button type="button" class="btn btn-sm btn-outline-secondary btn-edit-campo" data-id="<%= campo.id %>">
                                                                        <i class="bi bi-pencil"></i> Modifica
                                                                    </button>
                                                                    <button type="button" class="btn btn-sm btn-outline-danger btn-delete-campo" data-id="<%= campo.id %>">
                                                                        <i class="bi bi-trash"></i> Elimina
                                                                    </button>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                    <% }); %>
                                                <% } else { %>
                                                    <tr>
                                                        <td colspan="6" class="text-center text-muted py-4">
                                                            <i class="bi bi-info-circle display-4 mb-3"></i>
                                                            <p>Nessun campo presente nel sistema.</p>
                                                        </td>
                                                    </tr>
                                                <% } %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal per aggiungere campo -->
    <div class="modal fade" id="addCampoModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Aggiungi Nuovo Campo</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="addCampoForm" method="POST" action="/admin/campi" enctype="multipart/form-data">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="nome" class="form-label">Nome Campo *</label>
                                <input type="text" class="form-control" id="nome" name="nome" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="indirizzo" class="form-label">Indirizzo *</label>
                                <input type="text" class="form-control" id="indirizzo" name="indirizzo" required>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="tipo_superficie" class="form-label">Tipo Superficie</label>
                                <select class="form-control" id="tipo_superficie" name="tipo_superficie">
                                    <option value="Erba">Erba</option>
                                    <option value="Sintetico">Sintetico</option>
                                    <option value="Cemento">Cemento</option>
                                    <option value="Parquet">Parquet</option>
                                </select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="dimensioni" class="form-label">Dimensioni</label>
                                <input type="text" class="form-control" id="dimensioni" name="dimensioni" placeholder="es. 100x60">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="capienza_pubblico" class="form-label">Capienza Pubblico</label>
                                <input type="number" class="form-control" id="capienza_pubblico" name="capienza_pubblico">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="descrizione" class="form-label">Descrizione</label>
                                <textarea class="form-control" id="descrizione" name="descrizione" rows="2"></textarea>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="immagine" class="form-label">Immagine Campo</label>
                            <input type="file" class="form-control" id="immagine" name="immagine" accept="image/*">
                            <small class="form-text text-muted">Seleziona un'immagine per il campo (opzionale)</small>
                        </div>
                        <div class="row">
                            <div class="col-md-3 mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="illuminazione" name="illuminazione" value="1">
                                    <label class="form-check-label" for="illuminazione">
                                        Illuminazione
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-3 mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="coperto" name="coperto" value="1">
                                    <label class="form-check-label" for="coperto">
                                        Coperto
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-3 mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="spogliatoi" name="spogliatoi" value="1">
                                    <label class="form-check-label" for="spogliatoi">
                                        Spogliatoi
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-3 mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="Docce" name="Docce" value="1">
                                    <label class="form-check-label" for="Docce">
                                        Docce
                                    </label>
                                </div>
                            </div>
                        </div>

                                </div>

                        <div class="mb-3">
                        <div class="mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="attivo" name="attivo" value="1" checked>
                                <label class="form-check-label" for="attivo">
                                    Campo Prenotabile
                                </label>
                            </div>
                            <small class="form-text text-muted">Se spuntato, il campo sarà disponibile per le prenotazioni.</small>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annulla</button>
                    <button type="submit" form="addCampoForm" class="btn btn-primary">Crea Campo</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal per modificare campo -->
    <div class="modal fade" id="editCampoModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Modifica Campo</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form id="editCampoForm" enctype="multipart/form-data">
                        <input type="hidden" id="edit_campo_id" name="id">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="edit_nome" class="form-label">Nome Campo *</label>
                                <input type="text" class="form-control" id="edit_nome" name="nome" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="edit_indirizzo" class="form-label">Indirizzo *</label>
                                <input type="text" class="form-control" id="edit_indirizzo" name="indirizzo" required>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="edit_tipo_superficie" class="form-label">Tipo Superficie</label>
                                <select class="form-control" id="edit_tipo_superficie" name="tipo_superficie">
                                    <option value="Erba">Erba</option>
                                    <option value="Sintetico">Sintetico</option>
                                    <option value="Cemento">Cemento</option>
                                    <option value="Parquet">Parquet</option>
                                </select>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="edit_dimensioni" class="form-label">Dimensioni</label>
                                <input type="text" class="form-control" id="edit_dimensioni" name="dimensioni" placeholder="es. 100x60">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="edit_capienza_pubblico" class="form-label">Capienza Pubblico</label>
                                <input type="number" class="form-control" id="edit_capienza_pubblico" name="capienza_pubblico">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="edit_descrizione" class="form-label">Descrizione</label>
                                <textarea class="form-control" id="edit_descrizione" name="descrizione" rows="2"></textarea>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="edit_immagine" class="form-label">Immagine Campo</label>
                            <input type="file" class="form-control" id="edit_immagine" name="immagine" accept="image/*">
                            <small class="form-text text-muted">Seleziona una nuova immagine per il campo (opzionale)</small>
                        </div>
                        <div class="row">
                            <div class="col-md-3 mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="edit_illuminazione" name="illuminazione" value="1">
                                    <label class="form-check-label" for="edit_illuminazione">Illuminazione</label>
                                </div>
                            </div>
                            <div class="col-md-3 mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="edit_coperto" name="coperto" value="1">
                                    <label class="form-check-label" for="edit_coperto">Coperto</label>
                                </div>
                            </div>
                            <div class="col-md-3 mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="edit_spogliatoi" name="spogliatoi" value="1">
                                    <label class="form-check-label" for="edit_spogliatoi">Spogliatoi</label>
                                </div>
                            </div>
                            <div class="col-md-3 mb-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="edit_Docce" name="Docce" value="1">
                                    <label class="form-check-label" for="edit_Docce">Docce</label>
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="edit_attivo" name="attivo" value="1">
                                <label class="form-check-label" for="edit_attivo">Campo Prenotabile</label>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annulla</button>
                    <button type="button" id="saveEditCampoBtn" class="btn btn-primary">Salva Modifiche</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.4/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/javascripts/components/AdminGlobal.js"></script>
    <script src="/javascripts/components/Admin.js"></script>
    <script src="/javascripts/GestioneCampi.js"></script>
    <script type="module" src="/javascripts/utils/showModal.js"></script>
</body>
</html>